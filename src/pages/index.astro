---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import ModernHero from '~/components/widgets/ModernHero.astro';
import AboutMe from '~/components/widgets/AboutMe.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import ProjectShowcase from '~/components/widgets/ProjectShowcase.astro';
import Button from '~/components/ui/Button.astro';
import SkillsComponent from '~/components/widgets/SkillsComponent.astro';

const metadata = {
  title: 'P. Vidakovic - Full-Stack Engineer',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'About', href: '#about' },
        { text: 'Projects', href: '#projects' },
        { text: 'Skills', href: '#skills' },
        { text: 'Contact', href: '#contact' },
        { text: 'Blog', href: '#blog' },
        { text: 'Github', href: 'https://github.com/yourusername' },
      ]}
      actions={[
        {
          text: 'Get in Touch',
          href: '#contact',
          class: 'btn-gradient',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <ModernHero
    title="Full-Stack Engineer"
    tagline="Portfolio"
    image={{
      src: '~/assets/images/avataaars.png',
      alt: 'Niga',
    }}
  >
    <Fragment slot="subtitle">
      Creating elegant solutions to complex problems

      <div class="mt-6 flex flex-wrap justify-center gap-2">
        <span
          class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm"
          >React</span
        >
        <span
          class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm"
          >Node.js</span
        >
        <span
          class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm"
          >TypeScript</span
        >
        <span
          class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm"
          >Full-Stack</span
        >
      </div>
    </Fragment>

    <Fragment slot="actions">
      <Button href="#projects" variant="primary" class="btn-gradient">View My Work</Button>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 w-full h-full bg-cover bg-center"></div>
    </Fragment>
  </ModernHero>

  <!-- About Me Section with Forest-Inspired Styling -->
  <AboutMe
    id="about"
    title="About Me"
    tagline="Background"
    subtitle="Full-stack developer with a passion for creating elegant, user-friendly applications"
    image={{
      src: '~/assets/images/avataaars.png',
      alt: 'P. Vidakovic profile picture',
    }}
    socialLinks={[
      { icon: 'tabler:brand-github', label: 'GitHub', href: 'https://github.com/yourusername' },
      { icon: 'tabler:brand-linkedin', label: 'LinkedIn', href: 'https://linkedin.com/in/yourusername' },
      { icon: 'tabler:brand-twitter', label: 'Twitter', href: 'https://twitter.com/yourusername' },
    ]}
  >
    <Fragment slot="content">
      <p class="mb-4">
        Here's where you can tell your story. What drives you? What's your background? What are you passionate about?
      </p>
      <p class="mb-4">
        This is a great place to share more about your journey, your philosophy, and what makes you unique in your
        field. Consider mentioning your experience, education, and the values that guide your work.
      </p>
      <p>
        Don't be afraid to inject some personality here - this section helps visitors connect with you on a more
        personal level.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div
        class="absolute inset-0 bg-gradient-to-br from-white to-indigo-50 dark:from-gray-900 dark:to-indigo-950 opacity-70"
      >
      </div>
    </Fragment>
  </AboutMe>

  <!-- Projects Section with Modern Card Layout -->
  <ProjectShowcase
    id="projects"
    title="Recent Projects"
    subtitle="Check out some of my latest work and ongoing projects"
    tagline="Portfolio"
    projects={[
      {
        title: 'E-commerce Platform',
        description:
          'A full-featured online store with product management, shopping cart, and secure checkout functionality using React, Node.js, and MongoDB.',
        image: {
          src: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
          alt: 'E-commerce project screenshot',
        },
        tags: ['React', 'Node.js', 'MongoDB', 'Express', 'Stripe'],
        demoUrl: '#',
        sourceUrl: 'https://github.com/yourusername/ecommerce-project',
      },
      {
        title: 'Task Management App',
        description:
          'A productivity application for organizing tasks with drag-and-drop functionality and team collaboration features.',
        image: {
          src: 'https://images.unsplash.com/photo-1540350394557-8d14678e7f91?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2032&q=80',
          alt: 'Task management app interface',
        },
        tags: ['Vue.js', 'Firebase', 'Tailwind CSS'],
        demoUrl: '#',
        sourceUrl: 'https://github.com/yourusername/task-app',
      },
      {
        title: 'Fitness Tracker',
        description:
          'Mobile application for tracking workouts, nutrition, and fitness goals with progress visualization.',
        image: {
          src: 'https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
          alt: 'Fitness app interface',
        },
        tags: ['React Native', 'Redux', 'Node.js', 'MongoDB'],
        demoUrl: '#',
        sourceUrl: 'https://github.com/yourusername/fitness-tracker',
      },
      {
        title: 'Weather Dashboard',
        description: 'Real-time weather forecasting app with location-based data and interactive visualizations.',
        image: {
          src: 'https://images.unsplash.com/photo-1530908295418-a12e326966ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1548&q=80',
          alt: 'Weather dashboard interface',
        },
        tags: ['JavaScript', 'OpenWeather API', 'Chart.js'],
        demoUrl: '#',
        sourceUrl: 'https://github.com/yourusername/weather-dashboard',
      },
    ]}
    viewAllUrl="/projects"
    bg={`<div class="absolute inset-0 bg-blue-50 dark:bg-slate-950 opacity-70"></div>
       <div class="absolute inset-0 bg-dots"></div>`}
  />

  <!-- Skills Section with Modern Pill Design -->
  <SkillsComponent
  id="skills"
  categories={[
    {
      name: "Languages",
      skills: [
        { name: "JavaScript", icon: "tabler:brand-javascript" },
        { name: "TypeScript", icon: "tabler:brand-typescript" },
        { name: "Python", icon: "tabler:brand-python" },
        { name: "PHP", icon: "tabler:brand-php" },
        { name: "HTML", icon: "tabler:brand-html5" },
        { name: "CSS", icon: "tabler:brand-css3" },
      ]
    },
    {
      name: "Frameworks & Libraries",
      skills: [
        { name: "React", icon: "tabler:brand-react" },
        { name: "Vue.js", icon: "tabler:brand-vue" },
        { name: "Node.js", icon: "tabler:brand-nodejs" },
        { name: "Express", icon: "tabler:server" },
        { name: "Django", icon: "tabler:brand-django" },
        { name: "Tailwind CSS", icon: "tabler:brand-tailwind" },
        { name: "Bootstrap", icon: "tabler:brand-bootstrap" },
      ]
    },
    {
      name: "Tools & Platforms",
      skills: [
        { name: "Git", icon: "tabler:brand-git" },
        { name: "GitHub", icon: "tabler:brand-github" },
        { name: "Docker", icon: "tabler:brand-docker" },
        { name: "AWS", icon: "tabler:brand-aws" },
        { name: "Firebase", icon: "tabler:brand-firebase" },
        { name: "Netlify", icon: "tabler:cloud" },
        { name: "Vercel", icon: "tabler:cloud" },
      ]
    },
  ]}
/>

  <!-- BlogLatestPost Widget **************** -->
  <BlogLatestPosts
    id="blog"
    title="From My Blog"
    information={`Thoughts, tips, and insights on technology, design, and my professional journey.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Subscribe to our newsletter"
    subtitle="Get the latest updates and news delivered to your inbox."
    hasForm={true}
    formTitle="Sign up today"
    highlight="newsletter"
    form={{
      inputs: [
        {
          type: 'email',
          name: 'email',
          label: 'Email address',
          placeholder: 'your@email.com',
        },
      ],
      button: 'Subscribe',
      description: 'We respect your privacy. Unsubscribe anytime.',
    }}
  />

</Layout>

<style is:global>
  /* Gradient button */
  .btn-gradient {
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
    --tw-gradient-from: #2563eb;
    --tw-gradient-to: #4f46e5;
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    color: white;
    transition: all 0.2s ease;
  }

  .btn-gradient:hover {
    --tw-gradient-from: #1d4ed8;
    --tw-gradient-to: #4338ca;
    --tw-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    box-shadow: var(--tw-shadow);
  }

  /* Blinking cursor animation */
  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    from,
    to {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  /* Animation for hero section background */
  #hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at bottom right, rgba(79, 70, 229, 0.15) 0%, transparent 70%);
    animation: pulse 8s ease-in-out infinite alternate;
    pointer-events: none;
    z-index: -1;
  }

  @keyframes pulse {
    0% {
      opacity: 0.5;
    }
    100% {
      opacity: 0.8;
    }
  }
</style>
