---
import Layout from '~/layouts/PageLayout.astro';
import BentoHeroCard from '~/components/widgets/BentoHeroCard.astro';
import ProjectsSection from '~/components/widgets/ProjectsSection.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Contact from '~/components/widgets/Contact.astro';
import About from '~/components/widgets/About.astro';

const metadata = {
  title: 'Petar Vidakovic - Developer',
};
---

<Layout metadata={metadata}>
  <BentoHeroCard
    title="Developer. Designer. Creator."
    subtitle="iOS apps & web experiences. Swift • React • TypeScript"
    primaryCTA={{
      text: 'View Projects',
      href: '#projects',
    }}
    secondaryCTA={{
      text: 'Contact',
      href: '#contact',
    }}
    status={{
      text: 'Available for work',
      available: true,
    }}
  />

  <ProjectsSection />

  <About />

  <BlogLatestPosts />

  <Contact
    id="contact"
    title="Get In Touch"
    subtitle="Let's work together"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
        placeholder: 'Your name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'your@email.com',
      },
    ]}
    textarea={{
      name: 'message',
      label: 'Message',
      placeholder: 'Your message...',
      rows: 4,
    }}
    button="Send Message"
  />
</Layout>
