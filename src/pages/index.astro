---
import Layout from '~/layouts/PageLayout.astro';
import BentoHeroCard from '~/components/widgets/BentoHeroCard.astro';
import ProjectsSection from '~/components/widgets/ProjectsSection.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Contact from '~/components/widgets/Contact.astro';
import About from '~/components/widgets/About.astro';

const metadata = {
  title: 'Petar Vidakovic - Developer',
};
---

<Layout metadata={metadata}>
  <BentoHeroCard
    title="Developer. Designer. Creator."
    subtitle="iOS apps & web experiences. Swift • React • TypeScript"
    primaryCTA={{
      text: 'View Projects',
      href: '#projects',
    }}
    secondaryCTA={{
      text: 'Contact',
      href: '#contact',
    }}
  />

  <ProjectsSection />

  <About />

  <BlogLatestPosts id="blog"/>

  <Contact id="contact" />
</Layout>
