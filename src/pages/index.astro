          <h3 class="text-xl font-bold mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">Backend</h3>
          <div class="flex flex-wrap gap-2">
            <span class="bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-100 px-3 py-1 rounded-full text-sm">Node.js</span>
            <span class="bg-gray-100 dark:bg-gray-700/50 text-gray-800 dark:text-gray-100 px-3 py-1 rounded-full text-sm">Express</span>
            <span class="bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-100 px-3 py-1 rounded-full text-sm">Python</span>
            <span class="bg-red-100 dark:bg-red-900/50 text-red-800 dark:text-red-100 px-3 py-1 rounded-full text-sm">Django</span>
            <span class="bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-100 px-3 py-1 rounded-full text-sm">GraphQL</span>
          </div>
        </div>
        
        <!-- Database Skills Card -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-md hover:shadow-lg transition-all duration-300">
          <h3 class="text-xl font-bold mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">Databases</h3>
          <div class="flex flex-wrap gap-2">
            <span class="bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-100 px-3 py-1 rounded-full text-sm">MongoDB</span>
            <span class="bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-100 px-3 py-1 rounded-full text-sm">PostgreSQL</span>
            <span class="bg-orange-100 dark:bg-orange-900/50 text-orange-800 dark:text-orange-100 px-3 py-1 rounded-full text-sm">MySQL</span>
