---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'P. Vidakovic - Full-Stack Engineer',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'About', href: '#about' },
        { text: 'Projects', href: '#projects' },
        { text: 'Skills', href: '#skills' },
        { text: 'Contact', href: '#contact' },
        { text: 'Blog', href: '#blog' },
        { text: 'Github', href: 'https://github.com/yourusername' },
      ]}
      actions={[
        {
          text: 'Get in Touch',
          href: '#contact',
          class: 'btn-gradient',
        },
      ]}
      isSticky
      showToggleTheme
    >
    </Header>
  </Fragment>

  <!-- Hero Widget with Forest Inspired Background -->
<!-- Hero Widget with Forest-Inspired Styling -->
<Hero2
  id="hero-bg"
  title="Full-Stack Engineer"
  tagline="Portfolio"
  image={{
    src: "~/assets/images/hero-image.png",
    alt: "Niga"
  }}
>
  <Fragment slot="subtitle">
    Creating elegant solutions to complex problems
    
    <div class="mt-6 flex flex-wrap justify-center gap-2">
      <span class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm">React</span>
      <span class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm">Node.js</span>
      <span class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm">TypeScript</span>
      <span class="bg-primary-100 dark:bg-primary-700 text-primary-800 dark:text-primary-100 py-1 px-3 rounded-full text-sm">Full-Stack</span>
    </div>
  </Fragment>
  
  <Fragment slot="actions">
    <Button href="#projects" variant="primary" class="btn-gradient">View My Work</Button>
  </Fragment>
  
  <Fragment slot="bg">
    <div class="absolute inset-0 w-full h-full bg-cover bg-center"></div>
  </Fragment>
</Hero2>

  <!-- About Me Section with Forest-Inspired Styling -->
  <Content
    id="about"
    columns={2}
    classes={{ container: 'max-w-5xl' }}
    items={[
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'GitHub',
          href: 'https://github.com/yourusername',
          class: 'inline-flex items-center justify-center gap-1 rounded-full bg-gray-100 dark:bg-gray-800 px-3 py-2 text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://linkedin.com/in/yourusername',
          class: 'inline-flex items-center justify-center gap-1 rounded-full bg-gray-100 dark:bg-gray-800 px-3 py-2 text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition',
        },
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1491349174775-aaafddd81942?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Profile photo',
      class: 'rounded-2xl shadow-lg aspect-square object-cover',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-4 border-b border-primary-500 pb-2 inline-block">About me</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-4">
        Here's where you can tell your story. What drives you? What's your background? What are you passionate about?
      </p>
      <p class="text-gray-700 dark:text-gray-300 mb-6">
        This is a great place to share more about your journey, your philosophy, and what makes you unique in your field.
      </p>
      <p class="text-gray-600 dark:text-gray-400 mb-2">Connect with me:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-900 dark:to-gray-800 opacity-70"></div>
    </Fragment>
  </Content>

  <!-- Projects Section with Modern Card Layout -->
  <div class="py-12 md:py-16 bg-gray-50 dark:bg-gray-900" id="projects">
    <div class="container mx-auto px-4">
      <div class="mb-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold leading-tight">My Projects</h2>
        <p class="text-gray-600 dark:text-gray-300 mt-3">Recent work showcasing my skills and expertise</p>
      </div>
      
      <!-- Project Cards Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project Card 1 -->
        <div class="project-card bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 flex flex-col h-full transform hover:-translate-y-1">
          <div class="h-48 bg-gradient-to-r from-blue-500 to-indigo-600 relative overflow-hidden">
            <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
