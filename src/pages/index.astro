---
import Layout from '~/layouts/PageLayout.astro';
import BentoHeroCard from '~/components/widgets/BentoHeroCard.astro';
import ProjectsSection from '~/components/widgets/ProjectsSection.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Contact from '~/components/widgets/Contact.astro';
import About from '~/components/widgets/About.astro';

const metadata = {
  title: 'Web Developer & Digital Solutions Specialist',
  ignoreTitleTemplate: true,
  description: 'Building web applications, automating processes, and optimizing digital presence. Specializing in custom development, hosting, SEO, and Google Ads through RVB Corp.',
  openGraph: {
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <BentoHeroCard
    primaryCTA={{
      text: 'View Projects',
      href: '#projects',
    }}
  />

  <ProjectsSection />

  <About />

  <BlogLatestPosts id="blog"/>

  <Contact id="contact" />
</Layout>
