---
import Layout from '~/layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center justify-center min-h-screen px-4 py-16">
    <div class="max-w-3xl mx-auto">
      <!-- Terminal-style 404 Card -->
      <div class="error-card bg-slate-900 border border-pink-500/30 rounded-3xl p-12 relative overflow-hidden transition-all duration-300 hover:border-pink-500/50 hover:shadow-2xl">
        <div class="relative z-10">
          <!-- Terminal Header -->
          <div class="inline-flex items-center gap-2 px-4 py-3 bg-slate-900/80 border border-pink-500/20 rounded-lg font-mono text-sm mb-8">
            <span class="text-pink-500">$</span>
            <span class="text-purple-500">cat error.log</span>
          </div>

          <!-- 404 Number -->
          <div class="text-center mb-8">
            <h1 class="text-9xl font-extrabold mb-4 bg-gradient-to-br from-pink-500 to-purple-500 bg-clip-text text-transparent">
              404
            </h1>
            <div class="flex items-center justify-center gap-2 text-pink-500 font-mono text-sm mb-6">
              <Icon name="tabler:alert-triangle" class="w-5 h-5" />
              <span>Error: Page not found</span>
            </div>
          </div>

          <!-- Message -->
          <div class="text-center mb-8">
            <p class="text-2xl font-semibold text-white mb-4">
              Oops! This page doesn't exist.
            </p>
            <p class="text-lg text-slate-400 leading-relaxed">
              The page you're looking for seems to have wandered off into the void.
              Let's get you back on track.
            </p>
          </div>

          <!-- Actions -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href={getHomePermalink()}
              class="inline-flex items-center gap-2 px-7 py-3.5 bg-gradient-to-br from-pink-500 to-purple-500 rounded-lg text-white font-semibold hover:shadow-lg hover:-translate-y-0.5 transition-all"
            >
              <Icon name="tabler:home" class="w-5 h-5" />
              Back to Home
            </a>
            <a
              href="/#projects"
              class="inline-flex items-center gap-2 px-7 py-3.5 bg-slate-900/80 border border-purple-500/40 rounded-lg text-purple-500 font-semibold hover:border-purple-500/60 hover:bg-purple-500/10 transition-all"
            >
              <Icon name="tabler:briefcase" class="w-5 h-5" />
              View Projects
            </a>
          </div>

          <!-- Fun Terminal Output -->
          <div class="mt-12 pt-8 border-t border-slate-400/20">
            <div class="font-mono text-sm text-slate-500 space-y-2">
              <p><span class="text-pink-500">→</span> Attempted route: <span class="text-purple-400">{Astro.url.pathname}</span></p>
              <p><span class="text-pink-500">→</span> Status: <span class="text-red-400">404 Not Found</span></p>
              <p><span class="text-pink-500">→</span> Suggestion: <span class="text-green-400">Return to homepage</span></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .error-card {
    background: radial-gradient(circle at 30% 70%, rgba(236, 72, 153, 0.15), transparent 50%),
      radial-gradient(circle at 70% 30%, rgba(168, 85, 247, 0.15), transparent 50%), #0f172a;
  }
</style>
