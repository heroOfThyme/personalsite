---
// src/pages/elementii.astro
import ProjectLayout from '~/layouts/ProjectLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import FAQs from '~/components/widgets/FAQs.astro';

// Import images directly
import periodicTableImage from '~/assets/images/elementii/periodic-table.png';
import PrivacySection from '~/components/widgets/PrivacySection.astro';

const metadata = {
  title: 'Elementii | Interactive Periodic Table App',
  description: 'Explore chemistry through an engaging, interactive periodic table experience',
};

// App information
const appInfo = {
  name: 'Elementii',
  tagline: 'Interactive Periodic Table',
  description: 'Learn chemistry through an engaging, interactive experience with the periodic table of elements',
  appStoreLink: 'https://apps.apple.com/', // Update with your actual link
};

// FAQs
const faqs = [
  {
    title: 'Is Elementii free to download?',
    description:
      'Yes, Elementii is free to download with core features available to all users. There is zero in app purchases or subscriptions.',
  },
  {
    title: 'Does Elementii work offline?',
    description:
      'Yes! Once downloaded, all elementii information is accessible an all app features work without an internet connection. Do note however to receive updates you will need an active internet connection.',
  },
  {
    title: 'How can I contact support?',
    description:
      'You can reach our support team at support@elementii.app for any questions, feedback, or issues you may encounter, or use the contact form on this page.',
  },
];
---

<ProjectLayout metadata={metadata}>
  <!-- Header -->
  <Header
    links={[
      { text: 'Features', href: '#features' },
      { text: 'Privacy', href: '#privacy' },
      { text: 'Support', href: '#support' },
      { text: 'FAQ', href: '#faq' },
    ]}
    actions={[
      {
        variant: 'primary',
        text: 'App Store',
        href: appInfo.appStoreLink,
        icon: 'tabler:brand-apple',
      },
    ]}
    isSticky
    showToggleTheme
  />

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download on App Store',
        href: appInfo.appStoreLink,
        target: '_blank',
        icon: 'tabler:brand-apple',
      },
    ]}
    image={{ src: periodicTableImage, alt: 'Elementii Periodic Table', width: 1200, height: 675, quality: 95 }}
  >
    <Fragment slot="title">
      Explore the <span class="text-primary highlight">Periodic Table</span>.
    </Fragment>
    <Fragment slot="subtitle">
      <span class="sm:inline">
        <span class="font-bold">Elementii</span> is a comprehensive reference app with detailed information about all chemical
        elements.
      </span>
      Featuring Bohr models, element properties, random facts, it is my first iOS app.
    </Fragment>
  </Hero>

  <Content
    id="features"
    isReversed
    tagline="Features"
    title="A comprehensivd app that has it all!"
    items={[
      {
        title: 'View as Table or List',
        description:
          'View elements in the classic periodic table view, or the list view and have all the elements at your ready. ',
        icon: 'tabler:table',
      },
      {
        title: 'Information',
        description:
          'Not sure how to navigate the table? Click the "i" symbol at the top right of your screen for a brief explanation on the table layout and element structure.',
        icon: 'tabler:info-square',
      },
    ]}
    image={{
      src: '~/assets/images/elementii/periodic-table.png',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Complete Periodic Table</h3>
      Access detailed information on all 118 elements, including properties, history, and applications.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Overview',
        description: `A comprehensive at-a-glance summary of the element, featuring its atomic number, symbol, name, category, and a brief description of its significance.`,
        icon: 'tabler:list-tree',
      },
      {
        title: 'Properties',
        description:
          'Explore the physical and chemical characteristics of the element, including atomic weight, melting and boiling points, density, and more.',
        icon: 'tabler:zoom',
      },
      {
        title: 'Atom',
        description: 'A fun, animated Bohr model with the electron configurations underneath.',
        icon: 'tabler:atom-2',
      },
    ]}
    image={{
      src: '~/assets/images/elementii/detail-view.png',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Detailed View</h3>
      When selecting an element, users can access multiple tabs containing scientific data including atomic properties, discovery
      information, common applications, sustainability factors, Bohr models, and more!
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Element Identification',
        description: 'Guess the element from its symbol.',
        icon: 'tabler:atom',
      },
      {
        title: 'Atomic Numbers',
        description: 'Match elements with their atomic numbers.',
        icon: 'tabler:number-123',
      },
      {
        title: 'Element Anagrams',
        description: 'Unscramble element names.',
        icon: 'tabler:abc',
      },
      {
        title: 'and more!',
        icon: 'tabler:plus',
      },
    ]}
    image={{
      src: '~/assets/images/elementii/quiz-mode.png',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Quiz Mode</h3>
      Test your knowledge with fun quizzes covering element properties, symbols, and categories. Reinforce your learning
      through interactive questions that challenge your understanding of the periodic table and element characteristics.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <PrivacySection>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-900"></div>
    </Fragment>
  </PrivacySection>

  <!-- FAQs -->
  <FAQs
    id="faq"
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about Elementii"
    items={faqs}
    columns={1}
    classes={{ container: 'max-w-4xl' }}
  />

  <ContactUs
    id="support"
    title="Support"
    subtitle="Have questions or need assistance with Elementii? Send me a message and I will answer back as soon as possible!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information merely for the purpose of communication.',
    }}
    description="I typically responds within 24-48 hours!"
  />

  <!-- No custom footer - using default site footer -->
</ProjectLayout>
