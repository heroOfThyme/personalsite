---
// src/pages/elementii.astro
import ProjectLayout from '~/layouts/ProjectLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import { Icon } from 'astro-icon/components';

// Import images directly
import periodicTableImage from '~/assets/images/elementii/periodic-table.png';

const metadata = {
  title: 'Elementii | Interactive Periodic Table App',
  description: 'Explore chemistry through an engaging, interactive periodic table experience',
};

// App information
const appInfo = {
  name: 'Elementii',
  tagline: 'Interactive Periodic Table',
  description: 'Learn chemistry through an engaging, interactive experience with the periodic table of elements',
  appStoreLink: 'https://apps.apple.com/', // Update with your actual link
};

// FAQs
const faqs = [
  {
    title: 'Is Elementii free to download?',
    description:
      'Yes, Elementii is free to download with core features available to all users. Premium features are available through a one-time in-app purchase.',
  },
  {
    title: 'Does Elementii work offline?',
    description:
      'Yes! Once downloaded, all element information and basic features work without an internet connection. Some advanced features may require occasional updates.',
  },
  {
    title: 'Is Elementii suitable for students?',
    description:
      'Absolutely! Elementii was designed with students in mind, from high school to university level. Teachers often recommend it as a study aid.',
  },
  {
    title: 'How often is Elementii updated?',
    description:
      'We update Elementii monthly with new content, features, and improvements based on user feedback and scientific developments.',
  },
  {
    title: 'How can I contact support?',
    description:
      'You can reach our support team at support@elementii.app for any questions, feedback, or issues you may encounter, or use the contact form on this page.',
  },
];
---

<ProjectLayout metadata={metadata}>
  <!-- Header -->
  <Header
    links={[
      { text: 'Features', href: '#features' },
      { text: 'Privacy', href: '#privacy' },
      { text: 'Support', href: '#support' },
      { text: 'FAQ', href: '#faq' },
    ]}
    actions={[
      {
        variant: 'primary',
        text: 'App Store',
        href: appInfo.appStoreLink,
        icon: 'tabler:brand-apple',
      },
    ]}
    isSticky
    showToggleTheme
  />

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download on App Store',
        href: appInfo.appStoreLink,
        target: '_blank',
        icon: 'tabler:brand-apple',
      },
    ]}
    image={{ src: periodicTableImage, alt: 'Elementii Periodic Table', width: 1200, height: 675, quality: 95 }}
  >
    <Fragment slot="title">
      Explore the <span class="text-primary highlight">Periodic Table</span>.
    </Fragment>
    <Fragment slot="subtitle">
      <span class="sm:inline">
        <span class="font-bold">Elementii</span> is a comprehensive reference app with detailed information about all
        chemical elements.
      </span>
      Featuring Bohr models, element properties, random facts, it is my first iOS app.
    </Fragment>
  </Hero>

  <Content
    id="features"
    isReversed
    tagline="Features"
    title="A comprehensivd app that has it all!"
    items={[
      {
        title: 'View as Table or List',
        description:
          'View elements in the classic periodic table view, or the list view and have all the elements at your ready. ',
        icon: 'tabler:table',
      },
      {
        title: 'Information',
        description:
          'Not sure how to navigate the table? Click the "i" symbol at the top right of your screen for a brief explanation on the table layout and element structure.',
        icon: 'tabler:info-square'
      },
    ]}
    image={{
      src: '~/assets/images/elementii/periodic-table.png',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Complete Periodic Table</h3>
      Access detailed information on all 118 elements, including properties, history, and applications.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Overview',
        description: `A comprehensive at-a-glance summary of the element, featuring its atomic number, symbol, name, category, and a brief description of its significance.`,
        icon: 'tabler:list-tree'
      },
      {
        title: 'Properties',
        description:
          'Explore the physical and chemical characteristics of the element, including atomic weight, melting and boiling points, density, and more.',
        icon: 'tabler:zoom'
      },
      {
        title: 'Atom',
        description: 'A fun, animated Bohr model with the electron configurations underneath.',
        icon: 'tabler:atom-2'
      },
    ]}
    image={{
      src: '~/assets/images/elementii/detail-view.png',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Detailed View</h3>
      When selecting an element, users can access multiple tabs containing scientific data including atomic properties, discovery
      information, common applications, sustainability factors, Bohr models, and more!
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Element Identification',
        description: 'Guess the element from its symbol.',
        icon: 'tabler:atom',
      },
      {
        title: 'Atomic Numbers',
        description: 'Match elements with their atomic numbers.',
        icon: 'tabler:number-123',
      },
      {
        title: 'Element Anagrams',
        description: 'Unscramble element names.',
        icon: 'tabler:abc',
      },
      {
        title: 'and more!',
        icon: 'tabler:plus',
      },
    ]}
    image={{
      src: '~/assets/images/elementii/quiz-mode.png',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Quiz Mode</h3>
      Test your knowledge with fun quizzes covering element properties, symbols, and categories. Reinforce your learning
      through interactive questions that challenge your understanding of the periodic table and element characteristics.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Privacy Policy - Simple Version -->
  <section id="privacy" class="py-16 bg-blue-50 dark:bg-slate-800/20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-bold mb-6">Privacy Policy & Terms</h2>
      <p class="text-lg mb-8 max-w-3xl mx-auto">
        At Elementii, we believe in transparency. We collect minimal data to improve the app experience, and your quiz
        results and progress are stored locally on your device. For complete details, please review our full documents.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/privacy" class="btn btn-primary">Privacy Policy</a>
        <a href="./terms.md" class="btn">Terms of Service</a>
      </div>
    </div>
  </section>

  <!-- Support with Contact Form -->
  <section id="support" class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl font-bold mb-12 text-center">Support</h2>

      <div class="flex flex-col md:flex-row gap-8">
        <div class="w-full md:w-1/2">
          <h3 class="text-2xl font-bold mb-4">Get Help</h3>
          <p class="mb-6">
            Have questions or need assistance with Elementii? Our support team is ready to help you get the most out of
            your experience with our app.
          </p>
          <p class="mb-6">
            You can also reach us directly at <a
              href="mailto:support@elementii.app"
              class="text-primary hover:underline">support@elementii.app</a
            >
            or connect with us on social media:
          </p>
          <div class="flex gap-4">
            <a href="#" class="text-gray-400 hover:text-primary transition-colors">
              <Icon name="tabler:brand-twitter" class="h-6 w-6" />
            </a>
            <a href="#" class="text-gray-400 hover:text-primary transition-colors">
              <Icon name="tabler:brand-facebook" class="h-6 w-6" />
            </a>
            <a href="#" class="text-gray-400 hover:text-primary transition-colors">
              <Icon name="tabler:brand-instagram" class="h-6 w-6" />
            </a>
          </div>
        </div>

        <div class="w-full md:w-1/2 bg-gray-50 dark:bg-slate-800/50 p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-4">Contact Form</h3>
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-full">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <FAQs
    id="faq"
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about Elementii"
    items={faqs}
    columns={1}
    classes={{ container: 'max-w-4xl' }}
  />

  <!-- No custom footer - using default site footer -->
</ProjectLayout>
