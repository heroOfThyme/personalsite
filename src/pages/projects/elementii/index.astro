---
// src/pages/elementii.astro
import ProjectLayout from '~/layouts/ProjectLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Elementii - Interactive Periodic Table App',
  description: 'Explore chemistry through an engaging, interactive periodic table experience',
};

// App information
const appInfo = {
  name: 'Elementii',
  tagline: 'Interactive Periodic Table',
  description: 'Learn chemistry through an engaging, interactive experience with the periodic table of elements',
  googlePlayLink: 'https://play.google.com/store/apps', // Update with your actual link
  appStoreLink: 'https://apps.apple.com/', // Update with your actual link
  githubLink: 'https://github.com/yourusername/elementii',
};

// App screenshots - use your actual screenshot images
const screenshots = [
  {
    title: 'Element Details',
    description: 'Discover detailed information about all 118 elements',
    image: '~/assets/images/elementii/element-details.jpg', // Update with your actual image path
  },
  {
    title: 'Interactive Table',
    description: 'Explore the periodic table with color-coded elements by category',
    image: '~/assets/images/elementii/periodic-table.jpg', // Update with your actual image path
  },
  {
    title: 'Fun Facts',
    description: 'Learn interesting facts about elements you might not have known before',
    image: '~/assets/images/elementii/fun-facts.jpg', // Update with your actual image path
  },
];

// App features with colored icons
const features = [
  {
    title: 'Complete Periodic Table',
    description: 'Access detailed information on all 118 elements, including properties, history, and applications.',
    icon: 'tabler:table',
  },
  {
    title: 'Interactive 3D Models',
    description: 'Explore atomic structures in 3D, with interactive visualizations of electron configurations.',
    icon: 'tabler:3d-cube-sphere',
  },
  {
    title: 'Quiz Mode',
    description: 'Test your knowledge with fun quizzes covering element properties, symbols, and categories.',
    icon: 'tabler:bulb',
  },
  {
    title: 'Element Trends',
    description: 'Visualize trends across the periodic table, including electronegativity, atomic radius, and more.',
    icon: 'tabler:chart-line',
  },
  {
    title: 'Offline Access',
    description: 'All content available offline, perfect for studying without an internet connection.',
    icon: 'tabler:cloud-off',
  },
  {
    title: 'Regular Updates',
    description: 'New content and features added regularly, keeping the app fresh and up-to-date.',
    icon: 'tabler:refresh',
  }
];

// Stats about the app
const stats = [
  { title: 'Elements', amount: '118' },
  { title: 'Quiz Questions', amount: '500+' },
  { title: 'User Rating', amount: '4.8' },
  { title: 'Downloads', amount: '10K+' },
];

// FAQs
const faqs = [
  {
    title: 'Is Elementii free to download?',
    description: 'Yes, Elementii is free to download with core features available to all users. Premium features are available through a one-time in-app purchase.',
  },
  {
    title: 'Does Elementii work offline?',
    description: 'Yes! Once downloaded, all element information and basic features work without an internet connection. Some advanced features may require occasional updates.',
  },
  {
    title: 'Is Elementii suitable for students?',
    description: 'Absolutely! Elementii was designed with students in mind, from high school to university level. Teachers often recommend it as a study aid.',
  },
  {
    title: 'How often is Elementii updated?',
    description: 'We update Elementii monthly with new content, features, and improvements based on user feedback and scientific developments.',
  },
  {
    title: 'How can I contact support?',
    description: 'You can reach our support team at support@elementii.app for any questions, feedback, or issues you may encounter.',
  },
];

// Policy information for the Content component
const policyItems = [
  {
    title: 'Privacy Policy',
    description: 'We take your privacy seriously. Elementii collects minimal usage data to improve the app. Your quiz results and progress are stored locally on your device.',
  },
  {
    title: 'Data Collection',
    description: 'We only collect anonymous usage statistics and device information to fix bugs and optimize performance. No personal information is collected without your consent.',
  },
  {
    title: 'Terms of Service',
    description: 'By using Elementii, you agree to our terms of service. The app is provided "as is" without warranties. In-app purchases are non-refundable except as required by law.',
  },
];

// Support information for the Content component
const supportItems = [
  {
    title: 'Email Support',
    description: 'Reach our dedicated support team at support@elementii.app for any questions or issues.',
  },
  {
    title: 'Social Media',
    description: 'Connect with us on Twitter (@elementiiapp) or Facebook (facebook.com/elementiiapp) for updates and support.',
  },
  {
    title: 'Feedback',
    description: 'We welcome your suggestions and feedback to make Elementii better with each update.',
  },
];
---

<ProjectLayout metadata={metadata}>
  <!-- Header -->
  <Header
    links={[
      { text: 'Features', href: '#features' },
      { text: 'Screenshots', href: '#screenshots' },
      { text: 'Privacy', href: '#privacy' },
      { text: 'Support', href: '#support' },
      { text: 'Download', href: '#download' },
      { text: 'All Projects', href: '/projects' },
    ]}
    actions={[
      {
        variant: 'primary',
        text: 'Get the App',
        href: '#download',
        icon: 'tabler:download',
      },
    ]}
    isSticky
    showToggleTheme
  />

  <!-- Hero -->
  <Hero
    tagline={appInfo.tagline}
    title={appInfo.name}
    subtitle={appInfo.description}
    image={{
      src: screenshots[0].image,
      alt: 'Elementii app screenshot',
    }}
  >
    <Fragment slot="actions">
      <div class="flex flex-col sm:flex-row gap-4">
        <a href={appInfo.googlePlayLink} class="btn btn-primary" target="_blank">
          <Icon name="tabler:brand-google-play" class="h-5 w-5 mr-2" />
          Google Play
        </a>
        <a href={appInfo.appStoreLink} class="btn" target="_blank">
          <Icon name="tabler:brand-apple" class="h-5 w-5 mr-2" />
          App Store
        </a>
        <a href={appInfo.githubLink} class="btn btn-outline" target="_blank">
          <Icon name="tabler:brand-github" class="h-5 w-5 mr-2" />
          GitHub
        </a>
      </div>
    </Fragment>
  </Hero>

  <!-- Features -->
  <Features
    id="features"
    title="App Features"
    subtitle="Discover what makes Elementii the perfect tool for learning about the periodic table"
    columns={3}
    items={features}
    classes={{ container: 'max-w-6xl' }}
  />

  <!-- Stats -->
  <Stats
    title="By the Numbers"
    stats={stats}
    classes={{ container: 'max-w-4xl' }}
  />

  <!-- Screenshots -->
  <section id="screenshots" class="py-16 bg-blue-50 dark:bg-slate-800/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight mb-4">App Screenshots</h2>
        <p class="text-lg text-muted dark:text-slate-400 max-w-3xl mx-auto">
          Take a look at Elementii's clean interface and powerful features
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {screenshots.map((screenshot) => (
          <div class="rounded-xl overflow-hidden shadow-lg bg-white dark:bg-slate-900 transform hover:scale-105 transition-transform duration-300">
            <img 
              src={screenshot.image} 
              alt={screenshot.title} 
              class="w-full h-64 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">{screenshot.title}</h3>
              <p class="text-muted dark:text-slate-400">{screenshot.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Privacy Policy -->
  <Content
    id="privacy"
    isReversed
    title="Privacy Policy & Terms"
    subtitle="Your privacy matters to us"
    items={policyItems}
    image={{
      src: '~/assets/images/illustrations/privacy.svg', // Update with your actual image
      alt: 'Privacy illustration',
    }}
  >
    <Fragment slot="content">
      <p class="text-lg mb-6 text-muted dark:text-slate-400">
        At Elementii, we believe in transparency. Here's a summary of our privacy practices,
        but you can read our full policy below. If you have any questions, please don't
        hesitate to contact us.
      </p>
      <div class="flex mt-6">
        <a href="/elementii/privacy-policy" class="btn btn-primary mr-4">Full Privacy Policy</a>
        <a href="/elementii/terms" class="btn">Terms of Service</a>
      </div>
    </Fragment>
  </Content>

  <!-- Support Information -->
  <Content
    id="support"
    title="Support & Contact"
    subtitle="We're here to help"
    items={supportItems}
    image={{
      src: '~/assets/images/illustrations/support.svg', // Update with your actual image
      alt: 'Support illustration',
    }}
  >
    <Fragment slot="content">
      <p class="text-lg mb-6 text-muted dark:text-slate-400">
        Have questions or need assistance with Elementii? Our support team is ready to help
        you get the most out of your experience with our app.
      </p>
      <a href="mailto:support@elementii.app" class="btn btn-primary">
        <Icon name="tabler:mail" class="h-5 w-5 mr-2" />
        Contact Support
      </a>
    </Fragment>
  </Content>

  <!-- FAQs -->
  <FAQs
    id="faq"
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about Elementii"
    items={faqs}
    columns={1}
    classes={{ container: 'max-w-4xl' }}
  />

  <!-- Download CTA -->
  <CallToAction
    id="download"
    title="Get Elementii Today"
    subtitle="Start exploring the periodic table in a whole new way"
    actions={[
      {
        variant: 'primary',
        text: 'Google Play',
        href: appInfo.googlePlayLink,
        icon: 'tabler:brand-google-play',
      },
      {
        text: 'App Store',
        href: appInfo.appStoreLink,
        icon: 'tabler:brand-apple',
      },
    ]}
  />

  <!-- Back to Projects Button -->
  <div class="text-center py-12">
    <a href="/projects" class="btn btn-outline inline-flex items-center gap-2">
      <Icon name="tabler:arrow-left" class="w-5 h-5" />
      <span>Back to Projects</span>
    </a>
  </div>
</ProjectLayout>