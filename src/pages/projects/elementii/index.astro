---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'Elementii | Interactive Periodic Table App',
  description: 'Explore chemistry through an engaging, interactive periodic table experience',
};

const features = [
  {
    title: 'View as Table or List',
    description: 'View elements in the classic periodic table view, or switch to list view and have all the elements at your ready.',
    icon: 'tabler:table',
  },
  {
    title: 'Detailed Information',
    description: 'Access comprehensive data on all 118 elements, including properties, history, and applications.',
    icon: 'tabler:info-square',
  },
  {
    title: 'Bohr Model Animations',
    description: 'Explore fun, animated Bohr models with electron configurations for every element.',
    icon: 'tabler:atom-2',
  },
  {
    title: 'Quiz Mode',
    description: 'Test your knowledge with interactive quizzes covering element properties, symbols, and categories.',
    icon: 'tabler:help-hexagon',
  },
];

const faqs = [
  {
    question: 'Is Elementii free to download?',
    answer: 'Yes, Elementii is free to download with core features available to all users. There are zero in-app purchases or subscriptions.',
  },
  {
    question: 'Does Elementii work offline?',
    answer: 'Yes! Once downloaded, all element information is accessible and all app features work without an internet connection. Do note however to receive updates you will need an active internet connection.',
  },
  {
    question: 'Which devices are supported?',
    answer: 'Elementii is designed for iOS devices running iOS 18.0 or later, including iPhones and iPads.',
  },
];
---

<Layout metadata={metadata}>
  <div class="max-w-7xl mx-auto px-8 md:px-16 py-8 md:py-16">
    <!-- Back Button -->
    <div class="mb-8">
      <a href="/#projects" class="inline-flex items-center gap-2 px-5 py-3 bg-slate-900/80 border border-purple-500/30 rounded-xl text-purple-500 no-underline text-sm font-medium transition-all duration-300 hover:border-purple-500/60 hover:bg-purple-500/10 hover:-translate-x-1">
        <Icon name="tabler:arrow-left" class="w-4 h-4" />
        Back to Portfolio
      </a>
    </div>

    <!-- Hero Section -->
    <section class="mb-16">
      <div class="grid lg:grid-cols-[1.5fr_1fr] gap-8 items-start">
        <!-- Main Hero Card -->
        <div class="hero-card border border-purple-500/30 rounded-3xl p-12 relative overflow-hidden min-h-[500px] transition-all duration-300 hover:border-purple-500/50 hover:-translate-y-0.5 hover:shadow-2xl">
          <div class="relative z-10">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-full text-sm font-medium text-purple-500 mb-8">
              <Icon name="tabler:device-mobile" class="w-4 h-4" />
              <span>iOS App</span>
            </div>

            <h1 class="text-6xl font-extrabold text-white mb-2 bg-gradient-to-br from-purple-500 to-pink-500 bg-clip-text text-transparent">Elementii</h1>
            <p class="text-2xl text-slate-200 mb-6 font-semibold">Interactive Periodic Table</p>
            <p class="text-lg text-slate-400 leading-relaxed mb-8">
              Explore the building blocks of our universe with Elementii, an interactive periodic table reference app.
              Built with Swift and SwiftUI, it features detailed element information, quiz modes, and beautiful Bohr model animations.
            </p>

            <div class="mb-8">
              <Button variant="primary" href="https://apps.apple.com/" target="_blank">
                <Icon name="tabler:brand-apple" class="w-5 h-5" />
                Download on App Store
              </Button>
            </div>

            <div class="flex flex-col md:flex-row gap-8 pt-8 border-t border-slate-400/20">
              <div class="flex items-center gap-3">
                <Icon name="tabler:atom" class="w-6 h-6 text-pink-500" />
                <div class="flex flex-col">
                  <span class="text-xl font-bold text-white">118</span>
                  <span class="text-xs text-slate-400 uppercase tracking-wider">Elements</span>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <Icon name="tabler:device-mobile" class="w-6 h-6 text-pink-500" />
                <div class="flex flex-col">
                  <span class="text-xl font-bold text-white">iOS</span>
                  <span class="text-xs text-slate-400 uppercase tracking-wider">Platform</span>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <Icon name="tabler:code" class="w-6 h-6 text-pink-500" />
                <div class="flex flex-col">
                  <span class="text-xl font-bold text-white">Swift</span>
                  <span class="text-xs text-slate-400 uppercase tracking-wider">Language</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image Card -->
        <div class="hero-card border border-purple-500/30 rounded-3xl p-6 relative overflow-hidden min-h-[500px] transition-all duration-300 hover:border-purple-500/50 hover:-translate-y-0.5 hover:shadow-2xl group">
          <div class="relative w-full h-full rounded-xl overflow-hidden">
            <Image
              src="~/assets/images/elementii/periodic-table.png"
              alt="Elementii Periodic Table View"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-pink-500/10 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-2 px-4 py-3 bg-slate-900/80 border border-purple-500/20 rounded-lg font-mono text-sm mb-6">
          <span class="text-pink-500">$</span>
          <span class="text-purple-500">cat features.txt</span>
        </div>
        <h2 class="text-4xl font-extrabold text-white mb-4 bg-gradient-to-br from-pink-500 to-purple-500 bg-clip-text text-transparent">Features</h2>
        <p class="text-lg text-slate-400">Everything you need to explore the periodic table</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map((feature) => (
          <div class="feature-card bg-slate-900 border border-purple-500/20 rounded-2xl p-8 transition-all duration-300 hover:border-purple-500/40 hover:-translate-y-0.5 hover:shadow-xl">
            <div class="w-12 h-12 flex items-center justify-center bg-purple-500/10 border border-purple-500/30 rounded-xl mb-4">
              <Icon name={feature.icon} class="w-6 h-6 text-purple-500" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">{feature.title}</h3>
            <p class="text-sm text-slate-400 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Screenshots Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-white mb-4 bg-gradient-to-br from-pink-500 to-purple-500 bg-clip-text text-transparent">Screenshots</h2>
        <p class="text-lg text-slate-400">A closer look at Elementii</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="screenshot-card bg-slate-900 border border-purple-500/20 rounded-3xl p-8 mb-4 transition-all duration-300 hover:border-purple-500/40 hover:-translate-y-1 hover:shadow-2xl overflow-hidden group">
            <Image
              src="~/assets/images/elementii/screenshot1.png"
              alt="Elementii Main View"
              class="w-full h-auto rounded-xl transition-transform duration-300 group-hover:scale-[1.02]"
            />
          </div>
          <p class="text-sm text-slate-400 font-medium">Main Periodic Table</p>
        </div>

        <div class="text-center">
          <div class="screenshot-card bg-slate-900 border border-purple-500/20 rounded-3xl p-8 mb-4 transition-all duration-300 hover:border-purple-500/40 hover:-translate-y-1 hover:shadow-2xl overflow-hidden group">
            <Image
              src="~/assets/images/elementii/detail-view.png"
              alt="Element Detail View"
              class="w-full h-auto rounded-xl transition-transform duration-300 group-hover:scale-[1.02]"
            />
          </div>
          <p class="text-sm text-slate-400 font-medium">Element Details</p>
        </div>

        <div class="text-center">
          <div class="screenshot-card bg-slate-900 border border-purple-500/20 rounded-3xl p-8 mb-4 transition-all duration-300 hover:border-purple-500/40 hover:-translate-y-1 hover:shadow-2xl overflow-hidden group">
            <Image
              src="~/assets/images/elementii/quiz-mode.png"
              alt="Quiz Mode"
              class="w-full h-auto rounded-xl transition-transform duration-300 group-hover:scale-[1.02]"
            />
          </div>
          <p class="text-sm text-slate-400 font-medium">Interactive Quizzes</p>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-white mb-4 bg-gradient-to-br from-pink-500 to-purple-500 bg-clip-text text-transparent">Frequently Asked Questions</h2>
        <p class="text-lg text-slate-400">Common questions about Elementii</p>
      </div>

      <div class="flex flex-col gap-6 max-w-4xl mx-auto">
        {faqs.map((faq) => (
          <div class="faq-card bg-slate-900 border border-purple-500/20 rounded-2xl p-8 transition-all duration-300 hover:border-purple-500/40">
            <div class="flex items-start gap-4 mb-4">
              <Icon name="tabler:help-circle" class="w-6 h-6 text-pink-500 flex-shrink-0 mt-1" />
              <h3 class="text-lg font-semibold text-white">{faq.question}</h3>
            </div>
            <p class="text-sm text-slate-400 leading-relaxed pl-10">{faq.answer}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Privacy Policy Section -->
    <section id="privacy" class="mb-16 scroll-mt-24">
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-2 px-4 py-3 bg-slate-900/80 border border-purple-500/20 rounded-lg font-mono text-sm mb-6">
          <span class="text-pink-500">$</span>
          <span class="text-purple-500">cat privacy-policy.txt</span>
        </div>
        <h2 class="text-4xl font-extrabold text-white mb-4 bg-gradient-to-br from-pink-500 to-purple-500 bg-clip-text text-transparent">Privacy Policy</h2>
        <p class="text-lg text-slate-400">Your privacy matters</p>
      </div>

      <div class="privacy-card bg-slate-900 border border-purple-500/30 rounded-3xl p-12 max-w-5xl mx-auto transition-all duration-300 hover:border-purple-500/50">
        <div class="flex flex-col gap-8">
          <div class="flex items-start gap-6">
            <Icon name="tabler:shield-check" class="w-8 h-8 text-pink-500 flex-shrink-0 mt-1" />
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-white mb-3">No Data Collection</h3>
              <p class="text-sm text-slate-400 leading-relaxed">
                Elementii is a completely offline app. We do not collect, store, or transmit any personal data.
                All element information and app features are stored locally on your device.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-6">
            <Icon name="tabler:eye-off" class="w-8 h-8 text-pink-500 flex-shrink-0 mt-1" />
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-white mb-3">No Tracking</h3>
              <p class="text-sm text-slate-400 leading-relaxed">
                We do not use any analytics, tracking tools, or third-party services. Your usage of the app is completely private.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-6">
            <Icon name="tabler:lock" class="w-8 h-8 text-pink-500 flex-shrink-0 mt-1" />
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-white mb-3">Secure & Private</h3>
              <p class="text-sm text-slate-400 leading-relaxed">
                Since no data ever leaves your device, your information remains completely secure and under your control.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Support Section -->
    <section id="support" class="mb-16 scroll-mt-24">
      <div class="support-card bg-slate-900 border border-purple-500/30 rounded-3xl p-16 text-center transition-all duration-300 hover:border-purple-500/50 hover:-translate-y-0.5 hover:shadow-2xl">
        <div class="max-w-2xl mx-auto">
          <Icon name="tabler:mail" class="w-12 h-12 text-pink-500 mx-auto mb-6" />
          <h2 class="text-3xl font-bold text-white mb-4">Need Help?</h2>
          <p class="text-lg text-slate-400 leading-relaxed mb-8">
            Have questions or feedback about Elementii? I'd love to hear from you.
          </p>
          <a href="mailto:petar@rvbcorp.com" class="inline-flex items-center gap-2 px-7 py-3.5 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg text-white font-semibold hover:shadow-lg hover:-translate-y-0.5 transition-all">
            petar@rvbcorp.com
            <Icon name="tabler:send" class="w-5 h-5" />
          </a>
        </div>
      </div>
    </section>

    <!-- Back to Portfolio -->
    <section class="mt-16">
      <div class="bg-slate-900 border-2 border-dashed border-purple-500/30 rounded-2xl p-12 flex items-center justify-center text-center transition-all duration-300 hover:border-purple-500/60 hover:bg-purple-500/5">
        <div class="flex flex-col items-center gap-4">
          <Icon name="tabler:arrow-left" class="w-8 h-8 text-purple-500" />
          <h3 class="text-2xl font-semibold text-white">Back to Portfolio</h3>
          <p class="text-sm text-slate-400">Check out my other projects</p>
          <a href="/#projects" class="inline-flex items-center gap-2 px-5 py-3 bg-slate-900/80 border border-purple-500/30 rounded-xl text-purple-500 no-underline text-sm font-medium transition-all duration-300 hover:border-purple-500/60 hover:bg-purple-500/10 hover:-translate-x-1 mt-4">
            <Icon name="tabler:arrow-left" class="w-4 h-4" />
            View All Projects
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Complex radial gradients that Tailwind can't handle */
  .hero-card {
    background: radial-gradient(circle at 30% 70%, rgba(168, 85, 247, 0.15), transparent 50%),
      radial-gradient(circle at 70% 30%, rgba(236, 72, 153, 0.15), transparent 50%), #0f172a;
  }

  .feature-card {
    background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.05), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.05), transparent 50%), #0f172a;
  }

  .screenshot-card {
    background: radial-gradient(circle at 50% 50%, rgba(168, 85, 247, 0.1), transparent 70%), #0f172a;
  }

  .privacy-card {
    background: radial-gradient(circle at 50% 50%, rgba(168, 85, 247, 0.1), transparent 70%), #0f172a;
  }

  .faq-card {
    background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.05), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.05), transparent 50%), #0f172a;
  }

  .support-card {
    background: radial-gradient(circle at 50% 50%, rgba(168, 85, 247, 0.15), transparent 70%), #0f172a;
  }
</style>
