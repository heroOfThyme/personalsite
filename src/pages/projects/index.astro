---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'My Projects',
};

// This would be your projects data
const projects = [
  {
    title: 'Elementii',
    description:
      'Explore the building blocks of our universe with Elementi, an interactive periodic table reference application.',
    image: {
      src: '~/assets/images/elementii/screenshot1.png',
      alt: 'E-commerce project screenshot',
    },
    technologies: ['Swift', 'SwiftUI'],
    demoUrl: '/projects/elementii',
    sourceUrl: 'https://github.com/yourusername/ecommerce-project',
    featured: 'true'
  },
  {
    title: 'RVB Data Sciences Corp.',
    description:
      'RVB is my boutique web agency site built with Astro, combining personal creative vision with technical excellence.',
    image: {
      src: '~/assets/images/rvb.png',
      alt: 'Task management app interface', 
    },
    technologies: ['Astro', 'Tailwind'],
    link: 'https://rvbcorp.com',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero with developer styling -->
  <div class="relative">
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 md:py-16 lg:py-20">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Code-style tag -->
        <div class="flex justify-center mb-6">
          <span class="font-mono px-3 py-1 text-xs tracking-wider text-primary uppercase bg-primary/10 dark:bg-primary/20 rounded-md border border-primary/20 dark:border-primary/30">
            &lt;Portfolio/&gt;
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
          My <span class="text-primary relative">Projects</span>
        </h1>
        
        <p class="text-xl text-muted dark:text-muted mb-8">
          A showcase of my work, side projects, and contributions. Each project represents different skills and challenges I've tackled.
        </p>
        
        <!-- Terminal-style comment -->
        <div class="font-mono text-sm text-gray-500 dark:text-gray-400 mb-8 max-w-lg mx-auto bg-gray-100 dark:bg-gray-800 p-3 rounded-md">
          <span class="text-primary">//</span> Building solutions one project at a time
        </div>
      </div>
    </div>
  </div>

  <!-- Unified Projects Grid - Repository Card Style -->
  <section class="py-12 md:py-20 bg-transparent">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="mb-12 text-center">
        <!-- Terminal style command -->
        <div class="font-mono text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 p-2 rounded-md inline-block mb-4">
          <span class="text-primary">$ </span>ls -la ./projects
        </div>
        
        <h2 class="text-3xl font-bold tracking-tight mb-4">Project Collection</h2>
        <p class="text-lg text-muted dark:text-muted max-w-3xl mx-auto">
          Explore my work across different domains and technologies.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-white dark:bg-gray-950 rounded-lg shadow-md overflow-hidden border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex flex-col h-full">
            <!-- Repository-style header -->
            <div class="bg-gray-50 dark:bg-gray-950 px-4 py-2 border-b border-gray-200 dark:border-gray-600 flex items-center justify-between">
              <div class="flex items-center">
                <Icon name="tabler:folder" class="w-4 h-4 text-primary mr-2" />
                <span class="font-mono text-sm font-medium truncate">{project.title}</span>
              </div>
              
              {project.featured && (
                <span class="text-xs font-mono text-yellow-500 dark:text-yellow-300 bg-primary/10 dark:bg-primary/20 px-2 py-0.5 rounded-full">
                  featured
                </span>
              )}
            </div>
            
            <div class="h-48 overflow-hidden">
              <Image
                src={project.image.src}
                alt={project.image.alt}
                class="w-full h-full object-cover"
                width={400}
                height={225}
                aspectRatio="16:9"
              />
            </div>
            
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-muted dark:text-muted mb-4 line-clamp-3">{project.description}</p>
              
              <div class="mb-4">
                <div class="flex flex-wrap gap-2">
                  {project.technologies.map((tech) => (
                    <span class="font-mono text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
            
            <div class="p-4 bg-gray-50 dark:bg-gray-950 mt-auto border-t border-gray-200 dark:border-gray-600">
              <div class="flex justify-between">
                {project.link ? (
                  <a href={project.link} class="text-primary hover:text-primary-600 dark:hover:text-primary-400 font-medium inline-flex items-center gap-1 transition-colors">
                    <Icon name="tabler:external-link" class="w-4 h-4" />
                    <span>View Project</span>
                  </a>
                ) : project.demoUrl && (
                  <a href={project.demoUrl} class="text-primary hover:text-primary-600 dark:hover:text-primary-400 font-medium inline-flex items-center gap-1 transition-colors">
                    <Icon name="tabler:external-link" class="w-4 h-4" />
                    <span>View Project</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Back to Portfolio Button with Terminal Style -->
  <div class="text-center py-12">
    <div class="inline-block">
      <div class="font-mono text-xs text-gray-500 dark:text-gray-400 mb-2">
        <span class="text-primary">$ </span>cd ..
      </div>
      <Button variant="secondary" href="/#projects" class="inline-flex items-center gap-2">
        <Icon name="tabler:arrow-left" class="w-5 h-5" />
        <span>Back to Portfolio</span>
      </Button>
    </div>
  </div>
</Layout>