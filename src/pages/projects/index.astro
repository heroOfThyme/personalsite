---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import { getAllProjects } from '~/data/projects';

const metadata = {
  title: 'My Projects',
};

const projects = getAllProjects();
---

<Layout metadata={metadata}>
  <div class="projects-container">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="terminal-prompt">
        <span class="prompt">$</span>
        <span class="command">cd ~/portfolio/projects</span>
      </div>
      <h1 class="hero-title">My Projects</h1>
      <p class="hero-description">
        A showcase of my work, side projects, and contributions. Each project represents different skills and challenges I've tackled across web and mobile development.
      </p>
    </section>

    <!-- Projects Grid -->
    <section class="projects-section">
      <div class="projects-grid">
        {
          projects.map((project) => (
            <div
              class={`project-card ${project.featured ? 'featured-project' : ''}`}
            >
              {project.image && (
                <div class="card-image">
                  <Image
                    src={project.image.src}
                    alt={project.image.alt}
                    class="project-img"
                  />
                </div>
              )}

              <div class="card-content">
                <div class="card-header-inline">
                  <div class="project-status">
                    <span class={`status-dot ${project.status}`} />
                    <span class="status-text">
                      {project.status === 'live' ? 'Live' : project.status === 'in-progress' ? 'In Progress' : 'Completed'}
                    </span>
                  </div>
                  <Icon name="tabler:folder" class="folder-icon" />
                </div>

                {project.featured && (
                  <div class="featured-badge">
                    <Icon name="tabler:star" class="star-icon" />
                    Featured
                  </div>
                )}

                <h3 class="card-title">{project.title}</h3>
                <p class="card-description">{project.description}</p>

                <div class="tech-tags">
                  {project.technologies?.map((tech) => (
                    <span class="card-tag">{tech}</span>
                  ))}
                </div>

                {(project.link || project.demoUrl) && (
                  <a href={project.link || project.demoUrl} class="card-link">
                    View Project
                    <Icon name="tabler:arrow-right" class="link-arrow" />
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</Layout>

<style>
  .projects-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 4rem 4rem 4rem;
  }

  /* Hero Section */
  .hero-section {
    margin-bottom: 4rem;
    text-align: center;
  }

  .terminal-prompt {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .prompt {
    color: #a855f7;
    font-weight: 600;
  }

  .command {
    color: #ec4899;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 1.5rem 0;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0 auto;
    max-width: 42rem;
  }

  /* Projects Section */
  .projects-section {
    margin-top: 4rem;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
  }

  /* Project Cards */
  .project-card {
    background: transparent;
    border: 1px solid rgba(236, 72, 153, 0.3);
    border-radius: 4px;
    overflow: hidden;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .project-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 4px;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: radial-gradient(circle at 50% 50%, rgba(236, 72, 153, 0.05), transparent 70%);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-card:hover {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px);
    border-color: rgba(236, 72, 153, 0.5);
    box-shadow: 0 10px 30px rgba(236, 72, 153, 0.2), 0 0 40px rgba(236, 72, 153, 0.1);
  }

  .featured-project {
    border-color: rgba(251, 191, 36, 0.3);
  }

  .featured-project::before {
    background: radial-gradient(circle at 20% 80%, rgba(236, 72, 153, 0.05), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(168, 85, 247, 0.05), transparent 50%);
  }

  .featured-project:hover {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px);
    border-color: rgba(236, 72, 153, 0.5);
    box-shadow: 0 10px 40px rgba(236, 72, 153, 0.25), 0 0 60px rgba(168, 85, 247, 0.15);
  }

  /* Card Image */
  .card-image {
    width: 100%;
    height: 250px;
    position: relative;
    overflow: hidden;
    margin: 0 !important;
    padding: 0 !important;
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin: 0 !important;
    padding: 0 !important;
  }

  /* Card Content */
  .card-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  .card-header-inline {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .project-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 4px;
  }

  .status-dot {
    width: 0.375rem;
    height: 0.375rem;
    border-radius: 50%;
  }

  .status-dot.live {
    background: #22c55e;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.6);
    animation: pulse 2s infinite;
  }

  .status-dot.in-progress {
    background: #f59e0b;
    box-shadow: 0 0 6px rgba(245, 158, 11, 0.6);
  }

  .status-dot.completed {
    background: #6b7280;
  }

  .status-text {
    font-size: 0.65rem;
    color: #22c55e;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .folder-icon {
    width: 1rem;
    height: 1rem;
    color: #ec4899;
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.2), rgba(245, 158, 11, 0.2));
    border: 1px solid rgba(251, 191, 36, 0.5);
    border-radius: 4px;
    font-size: 0.65rem;
    color: #fbbf24;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    width: fit-content;
  }

  .star-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem 0;
  }

  .card-description {
    font-size: 0.875rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    padding-left: 1rem;
    border-left: 2px solid rgba(236, 72, 153, 0.5);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    margin-top: auto;
  }

  .card-tag {
    padding: 0.375rem 0.75rem;
    background: rgba(236, 72, 153, 0.1);
    border: 1px solid rgba(236, 72, 153, 0.3);
    border-radius: 4px;
    font-size: 0.75rem;
    color: #ec4899;
    font-weight: 500;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #a855f7;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    margin-top: auto;
  }

  .card-link:hover {
    color: #ec4899;
    gap: 0.75rem;
  }

  .link-arrow {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }

  .card-link:hover .link-arrow {
    transform: translateX(2px);
  }

  /* Animations */
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .projects-container {
      padding: 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .section-title {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .projects-container {
      padding: 1rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .card-content {
      padding: 1rem;
    }

    .back-card {
      padding: 1.5rem;
      min-height: 250px;
    }
  }
</style>
