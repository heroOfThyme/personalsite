---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '~/utils/permalinks';
---

<div class="back-to-blog">
  <a href={getBlogPermalink()} class="back-link">
    <Icon name="tabler:arrow-left" class="back-icon" />
    Back to Blog
  </a>
</div>

<style>
  .back-to-blog {
    margin-top: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #a855f7;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #ec4899;
  }

  .back-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }

  .back-link:hover .back-icon {
    transform: translateX(-4px);
  }
</style>
