---
import { getPermalink } from '~/utils/permalinks';

import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

export interface Props {
  tags: Post['tags'];
  class?: string;
  title?: string | undefined;
  isCategory?: boolean;
}

const { tags, class: className = '', title = undefined, isCategory = false } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <div class="tags-wrapper">
      {title !== undefined && (
        <span class="tags-title">{title}</span>
      )}
      <ul class={`tags-list ${className}`}>
        {tags.map((tag) => (
          <li class="tag-item">
            {!APP_BLOG?.tag?.isEnabled ? (
              <span class="tag-label">{tag.title}</span>
            ) : (
              <a
                href={getPermalink(tag.slug, isCategory ? 'category' : 'tag')}
                class="tag-link"
              >
                {tag.title}
              </a>
            )}
          </li>
        ))}
      </ul>
    </div>
  )
}

<style>
  .tags-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .tags-title {
    font-size: 0.875rem;
    color: #94a3b8;
    font-weight: 600;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .tag-item {
    display: inline-flex;
  }

  .tag-label,
  .tag-link {
    padding: 0.375rem 0.875rem;
    background: rgba(236, 72, 153, 0.1);
    border: 1px solid rgba(236, 72, 153, 0.4);
    border-radius: 50px;
    font-size: 0.8125rem;
    color: #ec4899;
    font-weight: 500;
    text-decoration: none;
  }
</style>
