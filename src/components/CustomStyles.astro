---
import '@fontsource-variable/inter';
import '@fontsource-variable/montserrat'; // Add a secondary font for headings

// You can import other fonts here for your brand
// import '@fontsource/poppins';
// import '@fontsource/roboto';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Montserrat Variable'; /* Changed to Montserrat for headings */

    /* Primary brand color - change this to your preferred color */
    --aw-color-primary: rgb(79, 70, 229); /* Indigo */
    --aw-color-secondary: rgb(67, 56, 202); /* Darker Indigo */
    --aw-color-accent: rgb(139, 92, 246); /* Purple */

    /* Text colors */
    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    /* Dark mode background */
    --aw-color-bg-page-dark: rgb(3, 7, 18);

    ::selection {
      background-color: rgb(224 231 255); /* Light indigo for selection */
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Montserrat Variable';

    /* Primary brand color in dark mode */
    --aw-color-primary: rgb(129, 140, 248); /* Lighter Indigo for dark mode */
    --aw-color-secondary: rgb(99, 102, 241);
    --aw-color-accent: rgb(167, 139, 250);

    /* Text colors in dark mode */
    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: rgb(67, 56, 202); /* Darker indigo for selection in dark mode */
      color: white;
    }
  }

  /* Button styles */
  .btn {
    @apply inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 dark:border-gray-700 dark:bg-slate-800 dark:text-gray-300 dark:hover:bg-slate-700;
  }

  .btn-primary {
    @apply border-transparent bg-primary text-white hover:bg-primary-600 dark:border-transparent dark:bg-primary dark:text-white dark:hover:bg-primary-700;
  }
  
  .btn-outline {
    @apply border-gray-300 bg-transparent text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-300 dark:hover:bg-gray-800;
  }

  .gradient-text {
    @apply text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent;
  }

  /* Hero section enhancements */
  .hero-bg {
    background: linear-gradient(135deg, rgb(239 246 255 / 80%) 0%, rgb(219 234 254 / 80%) 100%);
  }

  .dark .hero-bg {
    background: linear-gradient(135deg, rgba(13, 16, 45, 0.8) 0%, rgba(16, 23, 42, 0.8) 100%);
  }

  /* Card styles */
  .portfolio-card {
    @apply bg-white dark:bg-slate-900 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300;
  }

  /* Animated underline for links */
  .animated-link {
    position: relative;
  }

  .animated-link:after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    display: block;
    margin-top: 2px;
    right: 0;
    background: var(--aw-color-primary);
    transition: width 0.3s ease;
  }

  .animated-link:hover:after {
    width: 100%;
    left: 0;
    background: var(--aw-color-primary);
  }
</style>