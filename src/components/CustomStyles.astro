---
import '@fontsource/jetbrains-mono';
import '@fontsource/inter';
---

<style is:inline>
  :root {
    /* Developer-focused typography */
    --aw-font-sans: 'Inter', sans-serif;
    --aw-font-serif: 'Inter', sans-serif;
    --aw-font-heading: 'JetBrains Mono', monospace;

    /* Code editor-inspired color palette */
    --aw-color-primary: rgb(86, 182, 255); /* Bright blue similar to code syntax highlighting */
    --aw-color-secondary: rgb(252, 97, 141); /* Pink accent for highlights */
    --aw-color-accent: rgb(137, 221, 169); /* Terminal green */

    /* Text colors */
    --aw-color-text-heading: rgb(24, 24, 27);
    --aw-color-text-default: rgb(38, 38, 46);
    --aw-color-text-muted: rgb(38, 38, 46, 66%);
    
    /* Dark background that resembles code editors */
    --aw-color-bg-page: #1e1e2e;
    --aw-color-bg-page-dark: #15151e;

    ::selection {
      background-color: #56b6ff40;
      color: white;
    }
  }

  .dark {
    --aw-color-primary: rgb(86, 182, 255);
    --aw-color-secondary: rgb(252, 97, 141);
    --aw-color-accent: rgb(137, 221, 169);
    
    --aw-color-text-heading: rgb(235, 235, 245);
    --aw-color-text-default: rgb(220, 223, 228);
    --aw-color-text-muted: rgba(220, 223, 228, 0.66);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);
  }

  /* Subtle code-inspired line backgrounds that work with Tailwind */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(86, 182, 255, 0.07) 1px, transparent 1px),
      linear-gradient(90deg, rgba(86, 182, 255, 0.07) 1px, transparent 1px);
    background-size: 24px 24px;
  }

  /* Enhanced code block styling */
  pre {
    font-family: 'JetBrains Mono', monospace;
    position: relative;
    padding-top: 2.5rem;
  }

  pre::before {
    content: "";
    position: absolute;
    top: 0.75rem;
    left: 1rem;
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background-color: #ff5f56;
    box-shadow: 1.25rem 0 0 #ffbd2e, 2.5rem 0 0 #27c93f;
  }
</style>