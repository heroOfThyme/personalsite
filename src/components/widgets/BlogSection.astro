---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

export interface BlogPost {
  title: string;
  excerpt: string;
  date: string;
  readTime: string;
  category?: string;
  image?: {
    src: string;
    alt: string;
  };
  url: string;
}

export interface BlogStats {
  totalPosts: number;
  totalViews: string;
  categories: number;
  avgReadTime: string;
}

export interface Props {
  featuredPost?: BlogPost;
  recentPosts?: BlogPost[];
  stats?: BlogStats;
  currentStreak?: number;
  bestStreak?: number;
  viewAllUrl?: string;
  id?: string;
}

const {
  featuredPost = {
    title: 'Building with Astro: My Development Experience',
    excerpt:
      'Exploring why Astro has become my go-to framework for building fast, modern websites. From islands architecture to stellar performance.',
    date: 'March 15, 2025',
    readTime: '5 min read',
    category: 'Development',
    image: {
      src: '~/assets/images/blog-featured.jpg',
      alt: 'Astro development setup',
    },
    url: '/blog/building-with-astro',
  },
  recentPosts = [
    {
      title: 'iOS Development Journey: Building Elementii',
      excerpt: 'My first venture into Swift and SwiftUI development...',
      date: 'March 10, 2025',
      readTime: '8 min read',
      category: 'Mobile',
      url: '/blog/ios-development-journey',
    },
    {
      title: 'Why I Choose Astro for Client Projects',
      excerpt: 'Performance, developer experience, and client satisfaction...',
      date: 'March 5, 2025',
      readTime: '6 min read',
      category: 'Web Dev',
      url: '/blog/why-astro-client-projects',
    },
    {
      title: 'Setting Up a Modern Development Workflow',
      excerpt: 'Tools, processes, and automation that keep me productive...',
      date: 'February 28, 2025',
      readTime: '10 min read',
      category: 'Productivity',
      url: '/blog/modern-dev-workflow',
    },
  ],
  stats = {
    totalPosts: 12,
    totalViews: '2.4k',
    categories: 4,
    avgReadTime: '6 min',
  },
  currentStreak = 7,
  bestStreak = 14,
  viewAllUrl = '/blog',
  id = 'blog',
} = Astro.props;

const streakPercentage = Math.round((currentStreak / bestStreak) * 100);
---

<section class="blog-section" {...id ? { id } : {}}>
  <div class="blog-container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-badge">
        <Icon name="tabler:edit" class="badge-icon" />
        <span>Writing</span>
      </div>
      <h2 class="section-title">From My Blog</h2>
      <p class="section-subtitle">Thoughts, tutorials, and insights from my development journey</p>
    </div>

    <!-- Magazine Grid -->
    <div class="magazine-grid">
      <!-- Featured Post Card (Large) -->
      <article class="featured-post-card">
        {
          featuredPost.image && (
            <div class="featured-image">
              <Image
                src={featuredPost.image.src}
                alt={featuredPost.image.alt}
                width={500}
                height={250}
                class="post-image"
              />
              <div class="image-overlay" />
              {featuredPost.category && (
                <div class="category-badge">
                  <Icon name="tabler:tag" class="category-icon" />
                  {featuredPost.category}
                </div>
              )}
            </div>
          )
        }

        <div class="featured-content">
          <div class="post-meta">
            <span class="post-date">{featuredPost.date}</span>
            <span class="meta-separator">•</span>
            <span class="read-time">{featuredPost.readTime}</span>
          </div>

          <h3 class="featured-title">{featuredPost.title}</h3>
          <p class="featured-excerpt">{featuredPost.excerpt}</p>

          <div class="featured-actions">
            <Button variant="primary" href={featuredPost.url} class="read-more-btn">
              Read Article
              <Icon name="tabler:arrow-right" class="arrow-icon" />
            </Button>

            <div class="engagement-stats">
              <div class="stat-item">
                <Icon name="tabler:eye" class="stat-icon" />
                <span>1.2k views</span>
              </div>
              <div class="stat-item">
                <Icon name="tabler:heart" class="stat-icon" />
                <span>48 likes</span>
              </div>
            </div>
          </div>
        </div>
      </article>

      <!-- Recent Posts List -->
      <div class="recent-posts-card">
        <div class="card-header">
          <h4 class="card-title">Recent Posts</h4>
          <Button variant="link" href={viewAllUrl} class="view-all-link">
            View All
            <Icon name="tabler:external-link" class="link-icon" />
          </Button>
        </div>

        <div class="posts-list">
          {
            recentPosts.map((post, index) => (
              <article class="post-item">
                <div class="post-number">{String(index + 1).padStart(2, '0')}</div>
                <div class="post-content">
                  <h5 class="post-title">
                    <a href={post.url} class="post-link">
                      {post.title}
                    </a>
                  </h5>
                  <p class="post-excerpt">{post.excerpt}</p>
                  <div class="post-meta-inline">
                    <span class="post-category">{post.category}</span>
                    <span class="meta-separator">•</span>
                    <span class="post-date-small">{post.date}</span>
                    <span class="meta-separator">•</span>
                    <span class="read-time-small">{post.readTime}</span>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>

      <!-- Blog Stats Card -->
      <div class="stats-card">
        <div class="card-header">
          <Icon name="tabler:chart-bar" class="header-icon" />
          <h4 class="card-title">Blog Stats</h4>
        </div>

        <div class="stats-grid">
          <div class="stat-box">
            <div class="stat-number">{stats.totalPosts}</div>
            <div class="stat-label">Total Posts</div>
          </div>
          <div class="stat-box">
            <div class="stat-number">{stats.totalViews}</div>
            <div class="stat-label">Total Views</div>
          </div>
          <div class="stat-box">
            <div class="stat-number">{stats.categories}</div>
            <div class="stat-label">Categories</div>
          </div>
          <div class="stat-box">
            <div class="stat-number">{stats.avgReadTime}</div>
            <div class="stat-label">Avg Read</div>
          </div>
        </div>

        <div class="stats-footer">
          <Icon name="tabler:trending-up" class="trend-icon" />
          <span class="trend-text">Growing every week</span>
        </div>
      </div>

      <!-- Writing Streak Card -->
      <div class="streak-card">
        <div class="card-header">
          <Icon name="tabler:flame" class="header-icon flame-icon" />
          <h4 class="card-title">Writing Streak</h4>
        </div>

        <div class="streak-content">
          <div class="streak-main">
            <div class="current-streak">
              <span class="streak-number">{currentStreak}</span>
              <span class="streak-unit">days</span>
            </div>
            <p class="streak-description">Current writing streak</p>
          </div>

          <div class="streak-progress">
            <div class="progress-header">
              <span class="progress-label">Progress to best streak</span>
              <span class="progress-percentage">{streakPercentage}%</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style={`width: ${streakPercentage}%`}></div>
            </div>
            <div class="progress-footer">
              <span class="best-streak">Best: {bestStreak} days</span>
            </div>
          </div>
        </div>

        <div class="streak-footer">
          <Icon name="tabler:calendar" class="calendar-icon" />
          <span class="next-post">Next post due tomorrow</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: 4rem 0;
    background: transparent;
  }

  .blog-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 4rem;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(236, 72, 153, 0.1);
    border: 1px solid rgba(236, 72, 153, 0.3);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #ec4899;
    margin-bottom: 1rem;
  }

  .badge-icon {
    width: 1rem;
    height: 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #ec4899, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #94a3b8;
    margin: 0;
  }

  /* Magazine Grid Layout */
  .magazine-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.5rem;
    grid-template-areas:
      'featured recent'
      'stats streak';
  }

  .featured-post-card {
    grid-area: featured;
  }

  .recent-posts-card {
    grid-area: recent;
  }

  .stats-card {
    grid-area: stats;
  }

  .streak-card {
    grid-area: streak;
  }

  /* Base Card Styles */
  .featured-post-card,
  .recent-posts-card,
  .stats-card,
  .streak-card {
    background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.08), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.08), transparent 50%), #0f172a;
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .featured-post-card:hover,
  .recent-posts-card:hover,
  .stats-card:hover,
  .streak-card:hover {
    border-color: rgba(168, 85, 247, 0.4);
    transform: translateY(-2px);
  }

  /* Featured Post Card */
  .featured-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-post-card:hover .post-image {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2), rgba(168, 85, 247, 0.2));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .featured-post-card:hover .image-overlay {
    opacity: 1;
  }

  .category-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(236, 72, 153, 0.3);
    border-radius: 50px;
    font-size: 0.75rem;
    color: #ec4899;
    font-weight: 600;
  }

  .category-icon {
    width: 0.875rem;
    height: 0.875rem;
  }

  .featured-content {
    padding: 1.5rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #94a3b8;
    margin-bottom: 1rem;
  }

  .meta-separator {
    color: #64748b;
  }

  .featured-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .featured-excerpt {
    font-size: 1rem;
    color: #e2e8f0;
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
  }

  .featured-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .read-more-btn {
    background: linear-gradient(135deg, #ec4899, #a855f7) !important;
    border: none !important;
    color: white !important;
  }

  .arrow-icon {
    width: 1rem;
    height: 1rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }

  .read-more-btn:hover .arrow-icon {
    transform: translateX(2px);
  }

  .engagement-stats {
    display: flex;
    gap: 1rem;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .stat-icon {
    width: 1rem;
    height: 1rem;
  }

  /* Recent Posts Card */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 1.5rem 1rem 1.5rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #a855f7;
  }

  .view-all-link {
    color: #94a3b8 !important;
    font-size: 0.875rem;
    padding: 0 !important;
  }

  .link-icon {
    width: 1rem;
    height: 1rem;
    margin-left: 0.25rem;
  }

  .posts-list {
    padding: 1rem 1.5rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .post-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .post-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #a855f7;
    font-family: 'JetBrains Mono', monospace;
    flex-shrink: 0;
  }

  .post-content {
    flex: 1;
  }

  .post-title {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .post-link {
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-link:hover {
    color: #ec4899;
  }

  .post-excerpt {
    font-size: 0.8rem;
    color: #94a3b8;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta-inline {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: #64748b;
  }

  .post-category {
    color: #ec4899;
    font-weight: 500;
  }

  /* Stats Card */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    padding: 1rem 1.5rem;
  }

  .stat-box {
    text-align: center;
    padding: 1rem;
    background: rgba(168, 85, 247, 0.05);
    border: 1px solid rgba(168, 85, 247, 0.1);
    border-radius: 8px;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    font-family: 'JetBrains Mono', monospace;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #94a3b8;
    margin-top: 0.25rem;
  }

  .stats-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem 1.5rem 1.5rem;
    font-size: 0.875rem;
    color: #22c55e;
  }

  .trend-icon {
    width: 1rem;
    height: 1rem;
  }

  /* Streak Card */
  .flame-icon {
    color: #f59e0b !important;
  }

  .streak-content {
    padding: 1rem 1.5rem;
  }

  .streak-main {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .current-streak {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .streak-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: #f59e0b;
    font-family: 'JetBrains Mono', monospace;
  }

  .streak-unit {
    font-size: 1rem;
    color: #94a3b8;
    font-weight: 500;
  }

  .streak-description {
    font-size: 0.875rem;
    color: #94a3b8;
    margin: 0;
  }

  .streak-progress {
    margin-bottom: 1rem;
  }

  .progress-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .progress-label {
    font-size: 0.75rem;
    color: #94a3b8;
  }

  .progress-percentage {
    font-size: 0.75rem;
    color: #f59e0b;
    font-weight: 600;
  }

  .progress-bar {
    width: 100%;
    height: 6px;
    background: rgba(148, 163, 184, 0.2);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #f59e0b, #eab308);
    border-radius: 3px;
    transition: width 1s ease;
  }

  .progress-footer {
    text-align: right;
  }

  .best-streak {
    font-size: 0.75rem;
    color: #64748b;
  }

  .streak-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0 1.5rem 1.5rem 1.5rem;
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .calendar-icon {
    width: 1rem;
    height: 1rem;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .blog-container {
      padding: 0 2rem;
    }

    .magazine-grid {
      grid-template-columns: 1fr;
      grid-template-areas:
        'featured'
        'recent'
        'stats'
        'streak';
    }

    .featured-content {
      padding: 1rem;
    }

    .featured-title {
      font-size: 1.25rem;
    }

    .featured-actions {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .engagement-stats {
      justify-content: center;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .post-item {
      gap: 0.75rem;
    }

    .post-number {
      width: 1.5rem;
      height: 1.5rem;
      font-size: 0.75rem;
    }
  }
</style>
