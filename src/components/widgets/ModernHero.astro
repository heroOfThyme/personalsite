---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  primaryCTA?: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
    icon?: string;
  };
  image: {
    src: string;
    alt: string;
  }
  technologies?: string[];
}

const {
  title = "Full-Stack Developer",
  subtitle = "Creating elegant solutions to complex problems",
  tagline = "Portfolio",
  primaryCTA = {
    text: "View My Work",
    href: "#projects",
    icon: "tabler:arrow-down"
  },
  secondaryCTA = {
    text: "Contact Me",
    href: "#contact",
    icon: "tabler:mail"
  },
  image = await Astro.slots.render('image'),
  technologies = ["React", "Node.js", "TypeScript", "Full-Stack"]
} = Astro.props;
---

<section class="relative overflow-hidden">
  <!-- Gradient background with subtle dotted pattern -->
  <div class="absolute inset-0 bg-gradient-to-br from-white to-indigo-50 dark:from-gray-900 dark:to-indigo-950 z-0"></div>
  
  <!-- Subtle spotty gradient pattern overlay -->
  <div class="absolute inset-0 bg-dots z-0"></div>
  
  <!-- Main content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-24 md:py-32 lg:py-40 flex flex-col lg:flex-row items-center gap-12 lg:gap-20 z-10">
    <!-- Left column: Text content -->
    <div class="w-full lg:w-1/2 text-center lg:text-left">
      {tagline && (
        <p class="inline-block px-3 py-1 text-xs font-medium tracking-wider text-indigo-700 uppercase bg-indigo-100 dark:bg-indigo-900/30 dark:text-indigo-300 rounded-full mb-6">
          {tagline}
        </p>
      )}
      
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tighter mb-6 font-heading text-gray-900 dark:text-white">
        {title.split(' ').map((word, i) => (
          i % 2 === 0 ? 
            <span>{word} </span> : 
            <span class="text-indigo-600 dark:text-indigo-400">{word} </span>
        ))}
      </h1>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-xl mx-auto lg:mx-0">
        {subtitle}
      </p>
      
      <!-- Technology badges -->
      <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-8">
        {technologies.map(tech => (
          <span class="badge badge-primary">
            {tech}
          </span>
        ))}
      </div>
      
      <!-- Call to actions -->
      <div class="flex flex-wrap justify-center lg:justify-start gap-4">
        <Button variant="primary" href={primaryCTA.href} class="flex items-center gap-2">
          <span>{primaryCTA.text}</span>
          {primaryCTA.icon && <Icon name={primaryCTA.icon} class="w-5 h-5" />}
        </Button>
        
        <Button variant="primary" href={secondaryCTA.href} class="flex items-center gap-2">
          <span>{secondaryCTA.text}</span>
          {secondaryCTA.icon && <Icon name={secondaryCTA.icon} class="w-5 h-5" />}
        </Button>
      </div>
    </div>
    
    <!-- Right column: Image -->
    <div class="w-full lg:w-1/2">
      <div class="relative">
        <!-- Image with proper component usage -->
        <div class="relative intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
          {typeof image === 'string' ? (
            <Fragment set:html={image} />
          ) : (
            <div class="rounded-2xl overflow-hidden shadow-xl border border-gray-100 dark:border-gray-800 bg-white dark:bg-gray-800 transition-all duration-300 hover:shadow-2xl">
              <Image
                class="w-full h-auto"
                widths={[400, 768, 1024, 2040]}
                sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                loading="eager"
                width={600}
                height={600}
                {...image}
              />
              
              <!-- Subtle gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-tr from-indigo-500/10 to-transparent"></div>
            </div>
          )}
        </div>
        
        <!-- Experience card/badge -->
        <div class="absolute top-6 -left-6 md:top-8 md:-left-8 bg-white dark:bg-gray-800 rounded-lg px-4 py-3 shadow-lg border border-gray-100 dark:border-gray-700">
          <div class="flex items-center space-x-2">
            <div class="bg-indigo-100 dark:bg-indigo-900/30 p-2 rounded-md">
              <Icon name="tabler:code" class="w-5 h-5 text-indigo-600 dark:text-indigo-400" />
            </div>
            <p class="text-sm font-medium text-gray-900 dark:text-white">
              <span class="text-indigo-600 dark:text-indigo-400 font-semibold">5+</span> Years Experience
            </p>
          </div>
        </div>
        
        <!-- Project count card/badge -->
        <div class="absolute -bottom-4 right-8 bg-white dark:bg-gray-800 rounded-lg px-4 py-3 shadow-lg border border-gray-100 dark:border-gray-700">
          <div class="flex items-center space-x-2">
            <div class="bg-indigo-100 dark:bg-indigo-900/30 p-2 rounded-md">
              <Icon name="tabler:briefcase" class="w-5 h-5 text-indigo-600 dark:text-indigo-400" />
            </div>
            <p class="text-sm font-medium text-gray-900 dark:text-white">
              <span class="text-indigo-600 dark:text-indigo-400 font-semibold">20+</span> Projects Completed
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

<style>
/* Subtle dot pattern */
.bg-dots {
  background-image: radial-gradient(rgba(79, 70, 229, 0.1) 1px, transparent 1px);
  background-size: 30px 30px;
  opacity: 0.4;
}

/* Dark mode version */
:global(.dark) .bg-dots {
  background-image: radial-gradient(rgba(79, 70, 229, 0.2) 1px, transparent 1px);
  opacity: 0.2;
}
</style>