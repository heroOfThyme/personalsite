---
const {
  name = 'Petar Vidakovic',
} = Astro.props;
---

<div class="bento-hero-card">
  <!-- Gradient Orbs -->
  <div class="hero-decoration">
    <div class="gradient-orb"></div>
    <div class="gradient-orb"></div>
  </div>

  <div class="hero-layout">
    <div class="hero-content">
      <div class="hero-text">
        <p class="hero-greeting">Hi, I'm {name}</p>

        <h1 class="hero-title">
          <span class="gradient-text typing-text"></span>
          <span class="typing-cursor">|</span>
        </h1>

        <p class="hero-description">
          Building scalable web applications and elegant user experiences with modern technologies.
          Specializing in full-stack development, cloud architecture, and performance optimization.
        </p>

        <div class="hero-actions">
          <a href="#projects" class="primary-cta">
            View My Work
          </a>
          <a href="#contact" class="secondary-cta">
            Get In Touch
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Mouse Animation -->
  <div class="scroll-indicator">
    <div class="mouse">
      <div class="wheel"></div>
    </div>
  </div>
</div>

<script>
  function initTypingEffect() {
    const typingText = document.querySelector('.typing-text') as HTMLElement | null;
    if (!typingText) return;

    // Reset the text
    typingText.textContent = '';

    const text = 'Developer';
    let index = 0;

    function type() {
      if (typingText && index < text.length) {
        typingText.textContent += text.charAt(index);
        index++;
        setTimeout(type, 150);
      }
    }

    // Start typing after a short delay
    setTimeout(type, 500);
  }

  // Run on initial load
  initTypingEffect();

  // Re-run on page transitions (Astro View Transitions)
  document.addEventListener('astro:page-load', initTypingEffect);

  // Also handle when element becomes visible again
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const typingText = entry.target.querySelector('.typing-text');
        if (typingText && typingText.textContent === '') {
          initTypingEffect();
        }
      }
    });
  });

  const heroCard = document.querySelector('.bento-hero-card');
  if (heroCard) {
    observer.observe(heroCard);
  }
</script>

<style>
  .bento-hero-card {
    position: relative;
    background: #000;
    border: none;
    border-radius: 0;
    padding: 6rem 1.5rem 5rem 1.5rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bento-hero-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 48px 48px;
  }

  .hero-layout {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0;
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .hero-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 80rem;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 50rem;
  }

  .hero-greeting {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #94a3b8;
    margin: 0;
    font-weight: 500;
  }

  .hero-title {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(3rem, 7vw, 5.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
    letter-spacing: -0.025em;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    min-height: clamp(3.5rem, 8vw, 6rem);
  }

  .gradient-text {
    background: linear-gradient(135deg, #ec4899, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .typing-cursor {
    color: #ec4899;
    animation: blink 1s step-end infinite;
    font-weight: 300;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: #cbd5e1;
    line-height: 1.7;
    margin: 0;
    text-align: center;
    max-width: 42rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .primary-cta {
    background: linear-gradient(135deg, #ec4899, #a855f7);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 10px 25px -5px rgba(236, 72, 153, 0.3);
  }

  .primary-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 35px -5px rgba(236, 72, 153, 0.4);
  }

  .secondary-cta {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .secondary-cta:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  .hero-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .gradient-orb {
    position: absolute;
    width: 384px;
    height: 384px;
    background: rgba(168, 85, 247, 0.2);
    border-radius: 50%;
    filter: blur(80px);
    animation: pulse-glow 4s ease-in-out infinite;
  }

  .gradient-orb:nth-child(1) {
    top: 25%;
    left: -12rem;
    background: rgba(236, 72, 153, 0.2);
  }

  .gradient-orb:nth-child(2) {
    bottom: 25%;
    right: -12rem;
    background: rgba(168, 85, 247, 0.2);
    animation-delay: 1s;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .mouse {
    width: 26px;
    height: 40px;
    border: 2px solid #ec4899;
    border-radius: 13px;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .wheel {
    width: 3px;
    height: 8px;
    background: #ec4899;
    border-radius: 2px;
    margin-top: 8px;
    animation: scroll 2s ease-in-out infinite;
  }

  @keyframes scroll {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(12px);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .bento-hero-card {
      padding: 4rem 1rem 4rem 1rem;
    }

    .hero-text {
      gap: 1rem;
    }

    .hero-greeting {
      font-size: 0.875rem;
    }

    .hero-title {
      font-size: clamp(2.25rem, 10vw, 3rem);
      min-height: clamp(2.5rem, 12vw, 3.5rem);
    }

    .hero-description {
      font-size: 0.9375rem;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
      gap: 0.75rem;
      margin-bottom: 2rem;
    }

    .primary-cta,
    .secondary-cta {
      width: 100%;
      text-align: center;
      padding: 0.75rem 1.5rem;
      font-size: 0.9375rem;
    }

    .scroll-indicator {
      bottom: 1rem;
    }
  }

  @media (max-width: 480px) {
    .bento-hero-card {
      padding: 3rem 1rem 3.5rem 1rem;
    }

    .hero-title {
      font-size: clamp(2rem, 12vw, 2.5rem);
    }
  }
</style>
