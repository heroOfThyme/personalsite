---
const {
  name = 'Petar Vidakovic',
  image,
} = Astro.props;

// Generate ASCII stars with random positions
const starChars = ['*', '.', '+', 'o', '·', '∙', '•', '⋆'];
const generateStars = (count: number) => {
  return Array.from({ length: count }, () => {
    const char = starChars[Math.floor(Math.random() * starChars.length)];
    const x = Math.random() * 100;
    const y = Math.random() * 100;
    const delay = Math.random() * 5;
    const duration = 2 + Math.random() * 4;
    const size = 0.6 + Math.random() * 0.8;
    const animationType = ['twinkle', 'pulse', 'glow'][Math.floor(Math.random() * 3)];

    return { char, x, y, delay, duration, size, animationType };
  });
};

const stars = generateStars(150);
---

<div class="bento-hero-card">
  <!-- ASCII Starfield Background -->
  <div class="ascii-starfield">
    {stars.map((star) => (
      <span
        class={`ascii-star ${star.animationType}`}
        style={`
          left: ${star.x}%;
          top: ${star.y}%;
          font-size: ${star.size}rem;
          animation-delay: ${star.delay}s;
          animation-duration: ${star.duration}s;
        `}
      >
        {star.char}
      </span>
    ))}
  </div>

  <div class="hero-layout">
    <div class="hero-content">
      <div class="hero-text">
        <p class="hero-greeting">Hi, I'm {name}</p>

        <h1 class="hero-title">
          <span class="gradient-text typing-text"></span>
          <span class="typing-cursor">|</span>
        </h1>

        <p class="hero-description">
          I like to build websites and applications on the internet. Welcome to my personal portfolio! Feel free to explore my projects, blog posts, and get in touch.
        </p>

        <div class="hero-actions">
          <a href="#projects" class="primary-cta">
            View My Work
          </a>
        </div>

        {image && (
          <div class="hero-image">
            <img src={image} alt="Hero image" />
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <div class="mouse-container">
      <div class="wheel"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const typingText = document.querySelector('.typing-text');
    if (!typingText) return;

    // Check if already typed
    if (typingText.getAttribute('data-typed') === 'true') return;
    typingText.setAttribute('data-typed', 'true');

    const text = 'Web Developer';
    let index = 0;

    function type() {
      if (index < text.length && typingText) {
        typingText.textContent += text.charAt(index);
        index++;
        setTimeout(type, 150);
      }
    }

    // Start typing after a short delay
    setTimeout(type, 500);
  });
</script>

<style>
  .bento-hero-card {
    position: relative;
    background: transparent;
    border: none;
    border-radius: 0;
    padding: 6rem 1.5rem 5rem 1.5rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 75vh;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .hero-layout {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0;
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .hero-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 80rem;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 50rem;
  }

  .hero-greeting {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #94a3b8;
    margin: 0;
    font-weight: 500;
  }

  .hero-title {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(3rem, 7vw, 5.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
    letter-spacing: -0.025em;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    min-height: clamp(3.5rem, 8vw, 6rem);
  }

  .gradient-text {
    background: linear-gradient(135deg, #ec4899, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .typing-cursor {
    color: #ec4899;
    animation: blink 1s step-end infinite;
    font-weight: 300;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: #cbd5e1;
    line-height: 1.7;
    margin: 0;
    text-align: center;
    max-width: 42rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .primary-cta {
    background: linear-gradient(135deg, #ec4899, #a855f7);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 10px 25px -5px rgba(236, 72, 153, 0.3);
  }

  .primary-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 35px -5px rgba(236, 72, 153, 0.4);
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  /* ASCII Starfield Background */
  .ascii-starfield {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .ascii-star {
    position: absolute;
    font-family: 'JetBrains Mono', monospace;
    color: rgba(168, 85, 247, 0.5);
    pointer-events: none;
    will-change: opacity, transform;
  }

  /* Different animation types */
  .ascii-star.twinkle {
    animation: twinkle-animation ease-in-out infinite;
  }

  .ascii-star.pulse {
    animation: pulse-animation ease-in-out infinite;
  }

  .ascii-star.glow {
    animation: glow-animation ease-in-out infinite;
    text-shadow: 0 0 10px rgba(236, 72, 153, 0.6);
  }

  @keyframes twinkle-animation {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes pulse-animation {
    0%, 100% {
      opacity: 0.15;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.3);
    }
  }

  @keyframes glow-animation {
    0%, 100% {
      opacity: 0.2;
      text-shadow: 0 0 5px rgba(236, 72, 153, 0.3);
    }
    50% {
      opacity: 0.6;
      text-shadow: 0 0 15px rgba(236, 72, 153, 0.6), 0 0 20px rgba(168, 85, 247, 0.4);
    }
  }

  /* Hero Image */
  .hero-image {
    margin-top: 2rem;
    max-width: 600px;
    width: 100%;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    opacity: 0;
    animation: fade-in 0.6s ease-in-out 0.8s forwards;
  }

  .mouse-container {
    width: 1.75rem;
    height: 3rem;
    border: 2px solid rgba(236, 72, 153, 0.6);
    border-radius: 9999px;
    display: flex;
    justify-content: center;
    backdrop-filter: blur(4px);
    background: rgba(236, 72, 153, 0.1);
    transition: all 0.3s ease;
    box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);
  }

  .mouse-container:hover {
    border-color: rgba(236, 72, 153, 0.9);
    box-shadow: 0 0 30px rgba(236, 72, 153, 0.5);
  }

  .wheel {
    width: 0.375rem;
    height: 0.875rem;
    background: #ec4899;
    border-radius: 9999px;
    margin-top: 0.5rem;
    animation: bounce 1s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(236, 72, 153, 0.5);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
      animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
      transform: translateY(25%);
      animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .bento-hero-card {
      padding: 4rem 1rem 4rem 1rem;
    }

    .hero-text {
      gap: 1rem;
    }

    .hero-greeting {
      font-size: 0.875rem;
    }

    .hero-title {
      font-size: clamp(2.25rem, 10vw, 3rem);
      min-height: clamp(2.5rem, 12vw, 3.5rem);
    }

    .hero-description {
      font-size: 0.9375rem;
    }

    .hero-actions {
      margin-bottom: 2rem;
    }

    .action-links {
      gap: 1rem;
    }

    .action-link {
      font-size: 1rem;
    }

    .scroll-indicator {
      bottom: 1rem;
    }

    .ascii-background {
      font-size: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .bento-hero-card {
      padding: 3rem 1rem 3.5rem 1rem;
    }

    .hero-title {
      font-size: clamp(2rem, 12vw, 2.5rem);
    }
  }
</style>
