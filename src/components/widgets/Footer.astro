---
import { SITE } from 'astrowind:config';
interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface FooterLink {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links?: Array<FooterLink>;
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
  tagline?: string;
  email?: string;
  phone?: string;
  address?: string;
}

const {
  theme = 'light',
} = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="bg-white dark:bg-[#050505] absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300">
    <!-- Bottom Bar with Copyright -->
    <div class="py-6 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-600 dark:text-slate-400">
      <div>
        Â© {new Date().getFullYear()} {SITE?.name}. All rights reserved.
      </div>
      
      <!-- Secondary Links (Terms, Privacy, etc) -->
      <div class="flex gap-5">
        <a href="/terms" class="hover:text-primary transition duration-200">Terms</a>
        <a href="/privacy" class="hover:text-primary transition duration-200">Privacy</a>
      </div>
    </div>
  </div>
</footer>