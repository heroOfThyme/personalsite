---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';

export interface Props {
  title?: string;
  description?: string;
  privacyUrl?: string;
  termsUrl?: string;
  privacyButtonText?: string;
  termsButtonText?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = "Privacy Policy & Terms",
  description = "Elementii is fully transparent. We collect zero data from the user, and things such as your quiz results, progress, and theme preferences are stored locally on your device. For complete details, please review our full documents.",
  privacyUrl = "/projects/elementii/privacy",
  termsUrl = "/projects/elementii/terms",
  privacyButtonText = "Privacy Policy",
  termsButtonText = "Terms of Service",
  id = "privacy",
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-4xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="text-center">
    <h2 class="text-3xl font-bold font-heading mb-6">{title}</h2>
    <p class="text-lg mb-8 max-w-3xl mx-auto text-muted">{description}</p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button variant="primary" href={privacyUrl}>{privacyButtonText}</Button>
      <Button href={termsUrl}>{termsButtonText}</Button>
    </div>
  </div>
</WidgetWrapper>