---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

export interface Props {
  content?: string;
  skills?: string[];
  interests?: string[];
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  content = await Astro.slots.render('content'),
  skills = ['HTML', 'CSS', 'JavaScript/TypeScript'],
  interests = ["Full-Stack", "Mobile Development", ""],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Convert any HTML content to plain text for the terminal
const plainTextContent = content.replace(/<[^>]*>?/gm, '');
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-3xl mx-auto px-4 ${classes?.container ?? ''}`} bg={bg}>
  <section class="terminal-container relative">
    <!-- Terminal Window -->
    <div class="terminal-window rounded-lg overflow-hidden shadow-xl border border-gray-700 bg-[#050505] text-gray-400">
      <!-- Terminal Header -->
      <div class="terminal-header flex items-center p-2 bg-[#161b22] border-b border-gray-700">
        <div class="flex space-x-2">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <div class="mx-auto font-mono text-sm text-gray-400">petarv.dev ~ About Me</div>
      </div>
      
      <!-- Terminal Content - Neofetch Style -->
      <div class="p-4 font-mono text-sm leading-relaxed">
        <div>
          <!-- System Info -->
          <div class="flex-1">
            <span class="text-green-400 font-bold">Quick Facts</span>
            <div class="mt-2">
              <span class="text-yellow-400">Age:</span> <span class="text-gray-400">29</span>
            </div>
            <div>
              <span class="text-yellow-400">Location:</span> <span class="text-gray-400">Ontario, Canada</span>
            </div>
            <div>
              <span class="text-yellow-400">Skills:</span> <span class="text-gray-400">{skills.join(", ")}</span>
            </div>
            <div>
              <span class="text-yellow-400">Interests:</span> <span class="text-gray-400">{interests.join(", ")}</span>
            </div>
          </div>
        </div>
        
        <!-- Command Section -->
        <div class="mt-4 pt-4 border-t border-gray-700">
          <div class="flex flex-wrap">
            <span class="text-green-400">pv</span>
            <span class="text-gray-400">:</span>
            <span class="text-blue-400">~/portfolio</span>
            <span class="text-gray-400">$ </span>
            <span class="text-gray-400">cat about.txt</span>
          </div>
          <div class="mt-1 text-gray-400 whitespace-pre-wrap">{plainTextContent || "I'm a developer passionate about web technologies and creating engaging user experiences."}</div>
          
          <!-- Current command prompt with blinking cursor -->
          <div class="flex flex-wrap mt-2">
            <span class="text-green-400">pv</span>
            <span class="text-gray-400">:</span>
            <span class="text-blue-400">~/portfolio</span>
            <span class="text-gray-400">$ </span>
            <span class="text-gray-400 flex items-center">
              <span class="animate-pulse">â–‹</span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>
</WidgetWrapper>

<style>
  .terminal-window {
    font-family: 'Menlo', 'Monaco', 'Consolas', 'Liberation Mono', 'Courier New', monospace;
  }
  
  @keyframes cursor-blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>