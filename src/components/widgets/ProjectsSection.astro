    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .prompt {
    color: #ec4899;
    font-weight: 600;
  }

  .command {
    color: #a855f7;
  }

  .section-title {
    font-size: 2.5rem;
