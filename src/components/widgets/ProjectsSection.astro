    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8rem;
    color: #94a3b8;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .card-link:hover {
    color: #ec4899;
  }

  .link-icon {
    width: 0.875rem;
    height: 0.875rem;
  }

  /* View All Card */
  .view-all-card {
    background: transparent;
    border: 2px dashed rgba(236, 72, 153, 0.3);
    border-radius: 4px;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    transition: all 0.2s ease;
    cursor: pointer;
    min-height: 300px;
    position: relative;
    overflow: hidden;
  }

