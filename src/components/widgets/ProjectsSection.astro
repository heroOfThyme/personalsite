---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import { getFeaturedProject, getOtherProjects } from '~/data/projects';
import type { Project } from '~/data/projects';

export interface Props {
  featuredProject?: Project;
  projects?: Project[];
  viewAllUrl?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  featuredProject = getFeaturedProject(),
  projects = getOtherProjects(),
  viewAllUrl = '/projects',
  id = 'projects',
  isDark = true,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl ${classes?.container ?? ''}`} bg={bg}>
  <div>
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-wrapper">
        <div class="header-left">
          <div class="terminal-prompt">
            <span class="prompt">$</span>
            <span class="command">ls projects/</span>
          </div>
          <h2 class="section-title">Featured Projects</h2>
          <p class="section-subtitle">A collection of full-stack applications, iOS apps, and web experiences built with modern frameworks. From Swift & SwiftUI to React, TypeScript, and Astro.</p>
        </div>
        <div class="header-right">
          <Button variant="secondary" href={viewAllUrl} class="view-all-button">
            View All Projects
            <Icon name="tabler:arrow-right" class="button-icon" />
          </Button>
        </div>
      </div>
    </div>

    <!-- Projects Grid -->
    <div class="projects-grid">
      <!-- Featured Project Card (Large) -->
      <div class="featured-project-card">
        {
          featuredProject.image && (
            <div class="project-image">
              <Image
                src={featuredProject.image.src}
                alt={featuredProject.image.alt}
                class="featured-image"
              />
              <div class="image-overlay" />
            </div>
          )
        }

        <div class="project-content">
          <div class="project-header">
            <div class="project-status">
              <span class={`status-dot ${featuredProject.status}`}></span>
              <span class="status-text"
                >{
                  featuredProject.status === 'live'
                    ? 'Live'
                    : featuredProject.status === 'in-progress'
                      ? 'In Progress'
                      : 'Completed'
                }</span
              >
            </div>
            <div class="featured-badge">
              <Icon name="tabler:star" class="star-icon" />
              Featured
            </div>
          </div>

          <div class="project-info">
            <h3 class="project-title">{featuredProject.title}</h3>
            <p class="project-description">{featuredProject.description}</p>

            <div class="project-tags">
              {featuredProject.tags?.map((tag) => <span class="project-tag">{tag}</span>)}
            </div>
          </div>

          <div class="project-actions">
            {
              featuredProject.demoUrl && (
                <Button variant="primary" href={featuredProject.demoUrl} class="project-cta">
                  View Project
                  <Icon name="tabler:external-link" class="cta-icon" />
                </Button>
              )
            }
            {
              featuredProject.sourceUrl && (
                <Button variant="secondary" href={featuredProject.sourceUrl} class="project-source">
                  <Icon name="tabler:brand-github" class="cta-icon" />
                  Source
                </Button>
              )
            }
          </div>
        </div>
      </div>

      <!-- Regular Project Cards -->
      {
        projects.map((project) => (
          <div class="project-card">
            {project.image && (
              <div class="card-image">
                <Image
                  src={project.image.src}
                  alt={project.image.alt}
                  class="card-img"
                />
                <div class="card-image-overlay" />
              </div>
            )}

            <div class="card-content">
              <div class="card-header-inline">
                <div class="project-status">
                  <span class={`status-dot ${project.status}`} />
                  <span class="status-text">
                    {project.status === 'live' ? 'Live' : project.status === 'in-progress' ? 'In Progress' : 'Completed'}
                  </span>
                </div>
                <Icon name="tabler:folder" class="folder-icon" />
              </div>

              <h4 class="card-title">{project.title}</h4>
              <p class="card-description">{project.description}</p>

              <div class="card-tags">
                {project.tags?.map((tag) => (
                  <span class="card-tag">{tag}</span>
                ))}
              </div>
            </div>

            <div class="card-footer">
              {project.demoUrl && (
                <a href={project.demoUrl} class="card-link">
                  <Icon name="tabler:external-link" class="link-icon" />
                  View
                </a>
              )}
              {project.sourceUrl && (
                <a href={project.sourceUrl} class="card-link">
                  <Icon name="tabler:brand-github" class="link-icon" />
                  Code
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</WidgetWrapper>

<style>
