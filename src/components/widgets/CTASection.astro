---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';

export interface ContactMethod {
  icon: string;
  label: string;
  value: string;
  href: string;
}

export interface Props {
  personalCTA?: {
    title: string;
    subtitle: string;
    description: string;
    primaryAction: {
      text: string;
      href: string;
      icon?: string;
    };
    contactMethods: ContactMethod[];
  };
  businessCTA?: {
    title: string;
    subtitle: string;
    description: string;
    primaryAction: {
      text: string;
      href: string;
      icon?: string;
    };
    features: string[];
  };
  id?: string;
}

const {
  personalCTA = {
    title: "Let's Work Together",
    subtitle: 'Got a project in mind?',
    description:
      "I'm always interested in hearing about new opportunities, collaborations, or just having a chat about development.",
    primaryAction: {
      text: 'Get In Touch',
      href: 'mailto:hello@petarv.dev',
      icon: 'tabler:mail',
    },
    contactMethods: [
      {
        icon: 'tabler:mail',
        label: 'Email',
        value: 'hello@petarv.dev',
        href: 'mailto:hello@petarv.dev',
      },
      {
        icon: 'tabler:brand-linkedin',
        label: 'LinkedIn',
        value: 'Connect with me',
        href: 'https://linkedin.com/in/petarvidakovic',
      },
      {
        icon: 'tabler:brand-github',
        label: 'GitHub',
        value: 'View my code',
        href: 'https://github.com/petarvidakovic',
      },
    ],
  },
  businessCTA = {
    title: 'Need a Development Team?',
    subtitle: 'RVB Data Sciences Corp',
    description:
      'For larger projects and enterprise solutions, my agency provides dedicated team support and comprehensive web development services.',
    primaryAction: {
      text: 'Visit RVB Corp',
      href: 'https://rvbcorp.com',
      icon: 'tabler:external-link',
    },
    features: [
      'Enterprise web applications',
      'Dedicated development teams',
      'Full-stack solutions',
      'Ongoing support & maintenance',
    ],
  },
  id = 'contact',
} = Astro.props;
---

<section class="cta-section" {...id ? { id } : {}}>
  <div class="cta-container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-badge">
        <Icon name="tabler:rocket" class="badge-icon" />
        <span>Ready to Start?</span>
      </div>
      <h2 class="section-title">Let's Build Something Amazing</h2>
      <p class="section-subtitle">Choose the option that best fits your project needs</p>
    </div>

    <!-- Split CTA Grid -->
    <div class="cta-grid">
      <!-- Personal CTA Card -->
      <div class="cta-card personal-cta">
        <div class="cta-content">
          <div class="cta-header">
            <div class="cta-icon personal-icon">
              <Icon name="tabler:user" class="icon" />
            </div>
            <div class="cta-titles">
              <h3 class="cta-title">{personalCTA.title}</h3>
              <p class="cta-subtitle">{personalCTA.subtitle}</p>
            </div>
          </div>

          <p class="cta-description">{personalCTA.description}</p>

          <div class="contact-methods">
            {
              personalCTA.contactMethods.map((method) => (
                <a href={method.href} class="contact-method">
                  <div class="method-icon">
                    <Icon name={method.icon} class="contact-icon" />
                  </div>
                  <div class="method-info">
                    <span class="method-label">{method.label}</span>
                    <span class="method-value">{method.value}</span>
                  </div>
                  <Icon name="tabler:arrow-right" class="method-arrow" />
                </a>
              ))
            }
          </div>

          <div class="cta-actions">
            <Button variant="primary" href={personalCTA.primaryAction.href} class="primary-action personal-action">
              {personalCTA.primaryAction.text}
              {personalCTA.primaryAction.icon && <Icon name={personalCTA.primaryAction.icon} class="action-icon" />}
            </Button>
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="decoration personal-decoration">
          <div class="decoration-dot dot-1"></div>
          <div class="decoration-dot dot-2"></div>
          <div class="decoration-dot dot-3"></div>
        </div>
      </div>

      <!-- Business CTA Card -->
      <div class="cta-card business-cta">
        <div class="cta-content">
          <div class="cta-header">
            <div class="cta-icon business-icon">
              <Icon name="tabler:building" class="icon" />
            </div>
            <div class="cta-titles">
              <h3 class="cta-title">{businessCTA.title}</h3>
              <p class="cta-subtitle">{businessCTA.subtitle}</p>
            </div>
          </div>

          <p class="cta-description">{businessCTA.description}</p>

          <div class="features-list">
            {
              businessCTA.features.map((feature) => (
                <div class="feature-item">
                  <Icon name="tabler:check" class="feature-icon" />
                  <span class="feature-text">{feature}</span>
                </div>
              ))
            }
          </div>

          <div class="cta-actions">
            <Button
              variant="primary"
              href={businessCTA.primaryAction.href}
              target="_blank"
              rel="noopener noreferrer"
              class="primary-action business-action"
            >
              {businessCTA.primaryAction.text}
              {businessCTA.primaryAction.icon && <Icon name={businessCTA.primaryAction.icon} class="action-icon" />}
            </Button>
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="decoration business-decoration">
          <div class="decoration-line line-1"></div>
          <div class="decoration-line line-2"></div>
          <div class="decoration-circle"></div>
        </div>
      </div>
    </div>

    <!-- Footer Note -->
    <div class="cta-footer">
      <div class="footer-content">
        <Icon name="tabler:clock" class="clock-icon" />
        <span class="response-time">I typically respond within 24-48 hours</span>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 4rem 0;
    background: transparent;
  }

  .cta-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 4rem;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #22c55e;
    margin-bottom: 1rem;
  }

  .badge-icon {
    width: 1rem;
    height: 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #22c55e, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #94a3b8;
    margin: 0;
  }

  /* CTA Grid */
  .cta-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  /* CTA Cards */
  .cta-card {
    position: relative;
    background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.08), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.08), transparent 50%), #0f172a;
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 20px;
    padding: 2rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .cta-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .personal-cta:hover {
    border-color: rgba(236, 72, 153, 0.4);
    box-shadow: 0 20px 40px rgba(236, 72, 153, 0.15);
  }

  .business-cta:hover {
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 0 20px 40px rgba(59, 130, 246, 0.15);
  }

  .cta-content {
    position: relative;
    z-index: 2;
  }

  /* CTA Header */
  .cta-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .cta-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .personal-icon {
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2), rgba(168, 85, 247, 0.2));
    border: 1px solid rgba(236, 72, 153, 0.3);
  }

  .business-icon {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(34, 197, 94, 0.2));
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
    color: white;
  }

  .cta-titles {
    flex: 1;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .cta-subtitle {
    font-size: 1rem;
    margin: 0;
  }

  .personal-cta .cta-subtitle {
    color: #ec4899;
  }

  .business-cta .cta-subtitle {
    color: #3b82f6;
  }

  .cta-description {
    font-size: 1rem;
    color: #e2e8f0;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  /* Contact Methods */
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(236, 72, 153, 0.05);
    border: 1px solid rgba(236, 72, 153, 0.1);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    group: hover;
  }

  .contact-method:hover {
    background: rgba(236, 72, 153, 0.1);
    border-color: rgba(236, 72, 153, 0.3);
    transform: translateX(4px);
  }

  .method-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(236, 72, 153, 0.1);
    border: 1px solid rgba(236, 72, 153, 0.2);
    border-radius: 8px;
  }

  .contact-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #ec4899;
  }

  .method-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .method-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: white;
  }

  .method-value {
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .method-arrow {
    width: 1rem;
    height: 1rem;
    color: #94a3b8;
    transition: transform 0.2s ease;
  }

  .contact-method:hover .method-arrow {
    transform: translateX(2px);
  }

  /* Features List */
  .features-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .feature-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #22c55e;
    flex-shrink: 0;
  }

  .feature-text {
    font-size: 0.875rem;
    color: #e2e8f0;
  }

  /* CTA Actions */
  .cta-actions {
    display: flex;
    justify-content: center;
  }

  .primary-action {
    width: 100%;
    justify-content: center;
    font-weight: 600;
    padding: 0.875rem 1.5rem;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .personal-action {
    background: linear-gradient(135deg, #ec4899, #a855f7) !important;
    border: none !important;
    color: white !important;
  }

  .business-action {
    background: linear-gradient(135deg, #3b82f6, #22c55e) !important;
    border: none !important;
    color: white !important;
  }

  .action-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
  }

  /* Decorative Elements */
  .decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .personal-decoration .decoration-dot {
    position: absolute;
    border-radius: 50%;
    background: rgba(236, 72, 153, 0.2);
    animation: float 6s ease-in-out infinite;
  }

  .dot-1 {
    width: 60px;
    height: 60px;
    top: 2rem;
    right: 2rem;
    animation-delay: 0s;
  }

  .dot-2 {
    width: 30px;
    height: 30px;
    top: 4rem;
    right: 4rem;
    animation-delay: 2s;
  }

  .dot-3 {
    width: 20px;
    height: 20px;
    top: 6rem;
    right: 1rem;
    animation-delay: 4s;
  }

  .business-decoration .decoration-line {
    position: absolute;
    background: rgba(59, 130, 246, 0.2);
    animation: slide 8s ease-in-out infinite;
  }

  .line-1 {
    width: 100px;
    height: 2px;
    top: 3rem;
    right: 2rem;
    animation-delay: 0s;
  }

  .line-2 {
    width: 60px;
    height: 2px;
    top: 5rem;
    right: 4rem;
    animation-delay: 3s;
  }

  .decoration-circle {
    position: absolute;
    width: 40px;
    height: 40px;
    border: 2px solid rgba(34, 197, 94, 0.2);
    border-radius: 50%;
    top: 2rem;
    right: 6rem;
    animation: spin 10s linear infinite;
  }

  /* CTA Footer */
  .cta-footer {
    margin-top: 3rem;
    text-align: center;
  }

  .footer-content {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: rgba(148, 163, 184, 0.05);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 50px;
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .clock-icon {
    width: 1rem;
    height: 1rem;
  }

  /* Animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-10px) scale(1.1);
    }
  }

  @keyframes slide {
    0%,
    100% {
      transform: translateX(0px);
    }
    50% {
      transform: translateX(10px);
    }
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .cta-container {
      padding: 0 2rem;
    }

    .cta-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-card {
      padding: 1.5rem;
    }

    .cta-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .cta-icon {
      align-self: center;
    }

    .section-title {
      font-size: 2rem;
    }

    .contact-method {
      gap: 0.75rem;
    }

    .method-icon {
      width: 2rem;
      height: 2rem;
    }

    .contact-icon {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
