---
import { Icon } from 'astro-icon/components';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

export interface Props {
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
  bio?: string;
  name?: string;
  role?: string;
  location?: string;
  techStack?: Array<{
    name: string;
    icon: string;
    category: string;
  }>;
}

const {
  id = 'about',
  isDark = true,
  classes = {},
  bg = await Astro.slots.render('bg'),
  bio = "I'm a full-stack developer passionate about creating digital experiences. My journey started with a simple HTML page, and now I build everything from iOS apps to web platforms. I love clean code, thoughtful design, and building things that make a difference.",
  name = 'Petar Vidakovic',
  role = 'Full-Stack Developer',
  location = 'Ontario, Canada',
  techStack = [
    { name: 'Swift', icon: 'tabler:brand-swift', category: 'Mobile' },
    { name: 'SwiftUI', icon: 'tabler:brand-apple', category: 'Mobile' },
    { name: 'React', icon: 'tabler:brand-react', category: 'Frontend' },
    { name: 'TypeScript', icon: 'tabler:brand-typescript', category: 'Frontend' },
    { name: 'Astro', icon: 'tabler:rocket', category: 'Frontend' },
    { name: 'Node.js', icon: 'tabler:brand-nodejs', category: 'Backend' },
    { name: 'Tailwind', icon: 'tabler:palette', category: 'Frontend' },
    { name: 'Github', icon: 'tabler:brand-github', category: 'Tools' },
  ],
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl ${classes?.container ?? ''}`} bg={bg}>
  <div>
    <!-- Section Header -->
    <div class="section-header">
      <div class="terminal-prompt">
        <span class="prompt">$</span>
        <span class="command">whoami</span>
      </div>
      <h2 class="section-title">Who I Am</h2>
      <p class="section-subtitle">Full-stack developer passionate about building clean, modern applications. Experienced in web development with a focus on user experience perfornance.</p>
    </div>

    <!-- About Card -->
    <div class="bio-card">
      <div class="card-content">
        <div class="bio-header">
          <div class="avatar-placeholder">
            <Icon name="tabler:code" class="avatar-icon" />
          </div>
          <div class="bio-info">
            <h3 class="bio-name">{name}</h3>
            <p class="bio-role">{role}</p>
            <div class="bio-location">
              <Icon name="tabler:map-pin" class="location-icon" />
              <span>{location}</span>
            </div>
          </div>
        </div>

        <div class="bio-text">
          <p>{bio}</p>
        </div>

        <div class="bio-stats">
          <div class="stat-item">
            <Icon name="tabler:clock" class="stat-icon" />
            <div class="stat-info">
              <span class="stat-value">10+</span>
              <span class="stat-label">Years Experience</span>
            </div>
          </div>
          <div class="stat-item">
            <Icon name="tabler:code" class="stat-icon" />
            <div class="stat-info">
              <span class="stat-value">20+</span>
              <span class="stat-label">Projects Built</span>
            </div>
          </div>
          <div class="stat-item">
            <Icon name="tabler:coffee" class="stat-icon" />
            <div class="stat-info">
              <span class="stat-value">0</span>
              <span class="stat-label">Cups of Coffee</span>
            </div>
          </div>
        </div>

        <!-- Tech Stack (Inline) -->
        <div class="tech-stack-inline">
          <div class="tech-header-inline">
            <Icon name="tabler:stack" class="tech-header-icon" />
            <span class="tech-title-inline">Tech Stack</span>
          </div>
          <div class="tech-tags">
            {techStack.map((tech) => (
              <div class="tech-tag">
                <Icon name={tech.icon} class="tech-icon-small" />
                <span>{tech.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</WidgetWrapper>

<style>
  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .terminal-prompt {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .prompt {
    color: #a855f7;
    font-weight: 600;
  }

  .command {
    color: #ec4899;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #a855f7, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #94a3b8;
    margin: 0 auto;
    max-width: 42rem;
  }

  /* Bio Card */
  .bio-card {
    background: transparent;
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 4px;
    overflow: hidden;
    transition: all 0.2s ease;
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .bio-card:hover {
    border-color: rgba(168, 85, 247, 0.5);
  }

  .card-content {
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .bio-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .avatar-placeholder {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(139, 92, 246, 0.2));
    border: 2px solid rgba(168, 85, 247, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-icon {
    width: 2.5rem;
    height: 2.5rem;
    color: #a855f7;
  }

  .bio-info {
    flex: 1;
  }

  .bio-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.5rem 0;
  }

  .bio-role {
    font-size: 1rem;
    color: #a855f7;
    margin: 0 0 0.75rem 0;
    font-weight: 500;
  }

  .bio-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .location-icon {
    width: 1rem;
    height: 1rem;
  }

  .bio-text {
    margin-bottom: 2rem;
  }

  .bio-text p {
    font-size: 1rem;
    line-height: 1.7;
    color: #cbd5e1;
    margin: 0;
    padding-left: 1rem;
    border-left: 2px solid rgba(168, 85, 247, 0.5);
  }

  .bio-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(168, 85, 247, 0.05);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .stat-item:hover {
    background: rgba(168, 85, 247, 0.1);
    border-color: rgba(168, 85, 247, 0.4);
    transform: translateY(-2px);
  }

  .stat-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #a855f7;
    flex-shrink: 0;
  }

  .stat-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #94a3b8;
  }

  /* Tech Stack Inline */
  .tech-stack-inline {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .tech-header-inline {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-header-icon {
    width: 1rem;
    height: 1rem;
    color: #a855f7;
  }

  .tech-title-inline {
    font-size: 0.875rem;
    font-weight: 600;
    color: #a855f7;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 4px;
    font-size: 0.8125rem;
    color: #c4b5fd;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: rgba(168, 85, 247, 0.15);
    border-color: rgba(168, 85, 247, 0.4);
  }

  .tech-icon-small {
    width: 0.875rem;
    height: 0.875rem;
    color: #a855f7;
    flex-shrink: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .bio-header {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .bio-location {
      justify-content: center;
    }

    .card-content {
      padding: 1.5rem;
    }

    .bio-stats {
      grid-template-columns: 1fr;
    }

    .section-header {
      text-align: center;
    }

    .section-subtitle {
      margin: 0 auto;
    }

    .bio-card {
      margin: 0 auto;
    }
  }
</style>
